<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/rcs_setup_verify_ripple"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/rcs_setup_verify_btn_corner_radius" />
                    <solid android:color="@color/rcs_setup_verify_background_enabled" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/rcs_setup_verify_btn_corner_radius" />
                    <solid android:color="@color/rcs_setup_verify_background_disabled" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>