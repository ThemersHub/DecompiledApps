<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress">
        <rotate android:fromDegrees="270.0" android:toDegrees="270.0" android:pivotX="50.0%" android:pivotY="50.0%">
            <shape android:shape="ring" android:innerRadiusRatio="2.5" android:thicknessRatio="20.0" android:useLevel="true">
                <rotate android:fromDegrees="0.0" android:toDegrees="360.0" android:pivotX="50.0%" android:pivotY="50.0%" />
                <gradient android:startColor="@color/message_transfer_progress_ring" android:endColor="@color/message_transfer_progress_ring" android:type="sweep" android:centerColor="@color/message_transfer_progress_ring" />
            </shape>
        </rotate>
    </item>
</layer-list>