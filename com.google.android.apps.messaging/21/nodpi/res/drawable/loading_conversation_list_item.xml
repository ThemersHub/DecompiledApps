<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="#ffffffff"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:gravity="start|center|top">
                <shape android:shape="oval">
                    <size android:height="@dimen/conversation_list_contact_icon_size" android:width="@dimen/conversation_list_contact_icon_size" />
                    <solid android:color="@color/conversation_list_loading_item_color" />
                </shape>
            </item>
            <item android:gravity="top">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/conversation_list_loading_item_corner_radius" />
                    <size android:height="@dimen/conversation_list_loading_item_text_height" />
                    <solid android:color="@color/conversation_list_loading_item_color" />
                </shape>
            </item>
            <item android:gravity="center_vertical">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/conversation_list_loading_item_corner_radius" />
                    <size android:height="@dimen/conversation_list_loading_item_text_height" />
                    <solid android:color="@color/conversation_list_loading_item_color" />
                </shape>
            </item>
            <item android:gravity="start|bottom|center">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/conversation_list_loading_item_corner_radius" />
                    <size android:height="@dimen/conversation_list_loading_item_text_height" android:width="40.0dip" />
                    <solid android:color="@color/conversation_list_loading_item_color" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>