<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#33ffffff" />
            <size android:height="@dimen/countdown_inner_size" android:width="@dimen/countdown_inner_size" />
        </shape>
    </item>
    <item>
        <rotate android:fromDegrees="270.0" android:toDegrees="270.0" android:pivotX="50.0%" android:pivotY="50.0%">
            <shape android:shape="ring" android:useLevel="true" android:innerRadius="@dimen/countdown_radius" android:thickness="3.0sp">
                <solid android:color="#ccffffff" />
            </shape>
        </rotate>
    </item>
</layer-list>