<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavigationBar.Dark" parent="@style/NavigationBar.Dark.V27" />
    <style name="NavigationBar.Light" parent="@style/NavigationBar.Light.V27" />
    <style name="Theme.YouTube.Dark" parent="@style/Base.V27.Theme.YouTube.Dark" />
    <style name="Theme.YouTube.GalleryActivity" parent="@style/Base.V27.Theme.YouTube.GalleryActivity" />
    <style name="Theme.YouTube.Home" parent="@style/Base.V27.Theme.YouTube.Home" />
    <style name="Theme.YouTube.Light" parent="@style/Base.V27.Theme.YouTube.Light" />
    <style name="Theme.YouTube.Light.Dialog" parent="@style/Base.V27.Theme.YouTube.Light.Dialog" />
    <style name="Theme.YouTube.Share.DialogFragment" parent="@style/Base.V27.Theme.YouTube.Share.DialogFragment" />
    <style name="Base.V27.Theme.YouTube.Dark" parent="@style/Base.Theme.YouTube.Dark">
        <item name="android:navigationBarColor">@color/navigation_bar_background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@color/navigation_bar_divider_dark</item>
    </style>
    <style name="Base.V27.Theme.YouTube.GalleryActivity" parent="@style/Base.Theme.YouTube.GalleryActivity">
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
    </style>
    <style name="Base.V27.Theme.YouTube.Home" parent="@style/Base.Theme.YouTube.Home">
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
    </style>
    <style name="Base.V27.Theme.YouTube.Light" parent="@style/Base.V23.Theme.YouTube.Light">
        <item name="android:navigationBarColor">@color/navigation_bar_background_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarDividerColor">@color/navigation_bar_divider_light</item>
    </style>
    <style name="Base.V27.Theme.YouTube.Light.Dialog" parent="@style/Base.V23.Theme.YouTube.Light.Dialog">
        <item name="android:navigationBarColor">@color/navigation_bar_background_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarDividerColor">@color/navigation_bar_divider_light</item>
    </style>
    <style name="Base.V27.Theme.YouTube.Share.DialogFragment" parent="@style/Base.Theme.YouTube.Share.DialogFragment">
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarDividerColor">#ffe2e2e2</item>
    </style>
    <style name="NavigationBar.Dark.V27" parent="@style/NavigationBar">
        <item name="navigationBarColor">@color/navigation_bar_background_dark</item>
        <item name="navigationBarControlsMode">light</item>
        <item name="navigationBarDividerColor">@color/navigation_bar_divider_dark</item>
        <item name="navigationBarDividerSize">@dimen/navigation_bar_divider_size_dark</item>
    </style>
    <style name="NavigationBar.Light.V27" parent="@style/NavigationBar">
        <item name="navigationBarColor">@color/navigation_bar_background_light</item>
        <item name="navigationBarControlsMode">dark</item>
        <item name="navigationBarDividerColor">@color/navigation_bar_divider_light</item>
        <item name="navigationBarDividerSize">@dimen/navigation_bar_divider_size_light</item>
    </style>
</resources>
