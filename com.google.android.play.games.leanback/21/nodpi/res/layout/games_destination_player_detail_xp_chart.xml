<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/player_xp_chart_wrapper" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/player_xp_chart_background" android:background="@android:color/white" android:padding="@dimen/games_xp_chart_edge_padding" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@id/player_xp_chart" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:gravity="left" android:id="@id/player_detail_xp_genre" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/games_dest_player_detail_xp_per_genre" style="@style/PlayClusterTitle" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@id/player_xp_chart_expanded" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>
    <View android:id="@id/overlay" android:background="@drawable/games_highlight_overlay" android:focusable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" />
</FrameLayout>