<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="ChipAutocompleteDividerStyle">
        <item name="android:background">@color/autocomplete_divider_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/chip_custom_divider_height</item>
        <item name="android:layout_marginLeft">@dimen/chip_wrapper_start_padding</item>
    </style>
    <style name="ChipAutocompleteWrapperStyle">
        <item name="android:paddingLeft">@dimen/chip_wrapper_start_padding</item>
        <item name="android:paddingTop">@dimen/chip_wrapper_top_padding</item>
        <item name="android:paddingRight">@dimen/chip_wrapper_end_padding</item>
        <item name="android:paddingBottom">@dimen/chip_wrapper_bottom_padding</item>
    </style>
    <style name="ChipDeleteIconBaseStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:id">@android:id/icon1</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:layout_width">36.0dip</item>
        <item name="android:layout_height">48.0dip</item>
    </style>
    <style name="ChipDeleteIconStyle" parent="@style/ChipDeleteIconBaseStyle">
        <item name="android:paddingLeft">@dimen/chip_icon_padding</item>
    </style>
    <style name="ChipEndIconStyle" parent="@style/ChipIconBaseStyle">
        <item name="android:layout_marginLeft">@dimen/chip_icon_margin_end</item>
    </style>
    <style name="ChipIconBaseStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:id">@android:id/icon</item>
        <item name="android:layout_width">40.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:contentDescription">@null</item>
    </style>
    <style name="ChipIndicatorTextStyle" parent="@style/ChipSubtitleStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">6.0dip</item>
        <item name="android:drawablePadding">4.0dip</item>
    </style>
    <style name="ChipPermissionDismissIconStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:id">@android:id/icon2</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:padding">@dimen/chip_icon_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/chips_ic_close_24dp</item>
        <item name="android:contentDescription">@android:string/cancel</item>
    </style>
    <style name="ChipPermissionStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/chips_dropdown_permission_text</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/chips_permission_text</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="ChipStartIconStyle" parent="@style/ChipIconBaseStyle">
        <item name="android:layout_marginRight">@dimen/chip_icon_margin_end</item>
    </style>
    <style name="ChipSubtitleStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/chips_dropdown_text</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:id">@android:id/text1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ChipTextViewLayoutStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="ChipTitleStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/chips_dropdown_text</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:id">@android:id/title</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="RecipientEditTextView" parent="@style/RecipientEditTextViewBase">
        <item name="android:imeOptions">actionNext|flagNoFullscreen</item>
    </style>
    <style name="RecipientEditTextViewBase" parent="@android:attr/autoCompleteTextViewStyle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/chip_height</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
    </style>
    <style name="RecurrenceDayOfWeekStyle">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/recurrence_bubble_text_color</item>
        <item name="android:background">@drawable/recurrence_bubble_fill</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingTop">4.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:layout_marginTop">4.0dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:layout_marginBottom">4.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="RecurrenceEditEventView">
        <item name="android:textAppearance">@style/RecurrenceEditEventView.TextAppearance</item>
    </style>
    <style name="RecurrenceEditEventView.Button" parent="@style/RecurrenceEditEventView.Button_Dimensions">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/recurrence_edit_event_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="RecurrenceEditEventView.Button_Dimensions" parent="@style/RecurrenceEditEventView">
        <item name="android:minWidth">64.0dip</item>
    </style>
    <style name="RecurrenceEditEventView.Picker" parent="@style/RecurrenceEditEventView.Button">
        <item name="android:textSize">@dimen/recurrence_edit_segment_text_size</item>
        <item name="android:gravity">center|left</item>
    </style>
    <style name="RecurrenceEditEventView.TextAppearance" parent="@style/RecurrenceEditEventView">
        <item name="android:textColor">@color/recurrence_edit_event_text</item>
        <item name="android:textColorHighlight">@color/recurrence_edit_event_text_highlight</item>
        <item name="android:textColorHint">@color/recurrence_edit_event_text_hint</item>
        <item name="android:textColorLink">@color/recurrence_edit_event_text_link</item>
    </style>
    <style name="RecurrenceTextAppearance" parent="@android:style/TextAppearance" />
    <style name="RecurrenceTextAppearance.RecurrencePickerStyle" parent="@style/RecurrenceTextAppearance">
        <item name="android:textSize">15.0sp</item>
    </style>
    <style name="ampm_label">
        <item name="android:textSize">@dimen/ampm_label_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ampm_text_color</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="day_of_week_label_condensed" />
    <style name="time_label">
        <item name="android:textSize">@dimen/time_label_size</item>
        <item name="android:textColor">@color/numbers_text_color</item>
    </style>
</resources>
