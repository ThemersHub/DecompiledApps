<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@id/settings_unit_card" android:contentDescription="@string/units" style="@style/SettingsCard"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/settings_unit_card_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/units" style="@style/SettingsCardText.TitleTextStyle" />
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_marginRight="@dimen/settings_card_column_spacing" android:layout_weight="1.0" android:layout_marginEnd="@dimen/settings_card_column_spacing">
            <TextView android:id="@id/height_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preferences_height_unit_title" style="@style/SettingsCardText.BasicInfo.LabelTextStyle" />
            <Spinner android:id="@id/height_spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/settings_card_label_padding_bottom" />
            <TextView android:id="@id/distance_label" android:paddingTop="@dimen/settings_item_spacing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preferences_distance_unit_title" style="@style/SettingsCardText.BasicInfo.LabelTextStyle" />
            <Spinner android:id="@id/distance_spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/settings_card_label_padding_bottom" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/settings_card_column_spacing" android:layout_weight="1.0" android:layout_marginStart="@dimen/settings_card_column_spacing">
            <TextView android:id="@id/weight_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preferences_weight_unit_title" style="@style/SettingsCardText.BasicInfo.LabelTextStyle" />
            <Spinner android:id="@id/weight_spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/settings_card_label_padding_bottom" />
            <TextView android:id="@id/energy_label" android:paddingTop="@dimen/settings_item_spacing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preferences_energy_unit_title" style="@style/SettingsCardText.BasicInfo.LabelTextStyle" />
            <Spinner android:id="@id/energy_spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/settings_card_label_padding_bottom" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>