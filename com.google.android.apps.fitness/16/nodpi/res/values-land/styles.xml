<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SetupWizardGenericContent">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">@dimen/setup_wizard_content_margin_left</item>
        <item name="android:layout_marginTop">@dimen/setup_wizard_content_margin_top</item>
        <item name="android:layout_marginRight">@dimen/setup_wizard_content_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/setup_wizard_content_margin_bottom</item>
    </style>
    <style name="SetupWizardGenericHeader">
        <item name="android:background">@color/setup_wizard_header_background</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="layout_widthPercent">@dimen/setup_wizard_header_width_landscape_percent</item>
    </style>
    <style name="SetupWizardGenericHeader.Small" parent="@style/SetupWizardGenericHeader">
        <item name="layout_widthPercent">@dimen/setup_wizard_header_width_landscape_percent</item>
    </style>
    <style name="Widget.Design.TabLayout" parent="@style/Base.Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">center</item>
    </style>
</resources>
