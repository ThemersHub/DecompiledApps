<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@id/pr_intro_card" style="@style/Card"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:background="@color/notificationcards_color" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:paddingLeft="@dimen/card_internal_padding" android:paddingTop="@dimen/card_internal_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_pr_trophy_gold" android:layout_weight="0.0" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pr_introduction_title" android:layout_weight="1.0" style="@style/PRNotificationCardBoxPaddingStyle.IntroTitle" />
            <ImageView android:id="@id/pr_card_menu" android:layout_width="@dimen/overflow_button_touch_side" android:layout_height="@dimen/overflow_button_touch_side" android:src="@drawable/ic_overflow_dark_small" android:scaleType="center" android:layout_weight="0.0" android:contentDescription="@string/overflow_menu" style="@style/Fitness.SelectableItemBackgroundBorderless" />
        </LinearLayout>
        <TextView android:background="@color/prnotificationcards_intro_second" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/pr_introducing_records" android:fontFamily="sans-serif-medium" style="@style/PRTopAndLeftPaddingStyle.LightMessageText" />
        <LinearLayout android:orientation="vertical" android:id="@id/pr_intro_card_value_container" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pr_introduction_message" style="@style/PRNotificationCardBoxPaddingStyle.LightMessageText" />
    </LinearLayout>
</android.support.v7.widget.CardView>