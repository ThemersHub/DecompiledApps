<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@id/settings_unit_card" android:contentDescription="@string/units" style="@style/SettingsCard"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/settings_unit_card_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/units" style="@style/SettingsCardText.TitleTextStyle" />
    <TextView android:id="@id/height_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preferences_height_unit_title" style="@style/SettingsCardText.BasicInfo.LabelTextStyle" />
    <Spinner android:id="@id/height_spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:minHeight="@dimen/settings_short_edit_text_min_height" />
    <TextView android:id="@id/weight_label" android:paddingTop="@dimen/settings_item_spacing_half" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preferences_weight_unit_title" style="@style/SettingsCardText.BasicInfo.LabelTextStyle" />
    <Spinner android:id="@id/weight_spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:minHeight="@dimen/settings_short_edit_text_min_height" />
    <TextView android:id="@id/distance_label" android:paddingTop="@dimen/settings_item_spacing_half" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preferences_distance_unit_title" style="@style/SettingsCardText.BasicInfo.LabelTextStyle" />
    <Spinner android:id="@id/distance_spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:minHeight="@dimen/settings_short_edit_text_min_height" />
    <TextView android:id="@id/energy_label" android:paddingTop="@dimen/settings_item_spacing_half" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preferences_energy_unit_title" style="@style/SettingsCardText.BasicInfo.LabelTextStyle" />
    <Spinner android:id="@id/energy_spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:minHeight="@dimen/settings_short_edit_text_min_height" />
    <TextView android:id="@id/volume_label" android:paddingTop="@dimen/settings_item_spacing_half" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preferences_volume_unit_title" style="@style/SettingsCardText.BasicInfo.LabelTextStyle" />
    <Spinner android:id="@id/volume_spinner" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:minHeight="@dimen/settings_short_edit_text_min_height" />
</LinearLayout>