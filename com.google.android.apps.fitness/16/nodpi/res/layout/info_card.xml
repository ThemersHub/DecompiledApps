<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_gravity="center" android:id="@id/session_card" style="@style/Card"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.google.android.apps.fitness.ui.imageheader.FullBleedImageView android:id="@id/image" android:layout_width="fill_parent" android:layout_height="160.0dip" />
        <TextView android:id="@id/title" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/FitCardHeader" />
        <TextView android:id="@id/content" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/card_internal_padding" style="@style/FitCardContent" />
        <FrameLayout android:id="@id/button_container" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <View style="@style/FitDivider" />
            <Button android:id="@id/button_text" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/FitBlueButton" />
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>