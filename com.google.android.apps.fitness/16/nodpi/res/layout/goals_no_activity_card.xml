<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/Card"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@id/biking_header_image" android:layout_width="fill_parent" android:layout_height="@dimen/goal_card_header_height" android:src="@drawable/illo_empty_card_biking" />
            <ImageView android:id="@id/walking_header_image" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/goal_card_header_height" android:src="@drawable/illo_empty_card_walking" android:alpha="0.0" />
            <ImageView android:id="@id/running_header_image" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/goal_card_header_height" android:src="@drawable/illo_empty_card_running" android:alpha="0.0" />
        </RelativeLayout>
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/goal_card_content_margin" android:layout_marginRight="@dimen/goal_card_content_margin" android:layout_marginBottom="12.0dip">
            <TextView android:textSize="20.0sp" android:textColor="@color/quantum_black_text" android:id="@id/title_view" android:paddingTop="12.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/goals_no_activity_title" android:fontFamily="sans-serif-medium" />
            <TextView android:paddingTop="4.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/goals_no_activity_description" android:layout_below="@id/title_view" />
        </RelativeLayout>
        <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
            <View style="@style/FitDivider" />
            <Button android:textColor="@color/quantum_googblue500" android:id="@id/start_activity_button" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/start_activity_button" style="@style/FitBlueButton" />
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>