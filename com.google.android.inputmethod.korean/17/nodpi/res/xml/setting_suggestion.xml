    <CheckBoxPreference android:persistent="true" android:title="@string/setting_show_suggestion_title" android:key="@string/pref_key_korean_show_suggestion" android:summary="@string/setting_show_suggestion_summary" />
    <CheckBoxPreference android:persistent="true" android:title="@string/setting_auto_correction_title" android:key="@string/pref_key_spell_correction" android:summary="@string/setting_auto_correction_summary" android:dependency="@string/pref_key_korean_show_suggestion" />
