<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.AppCompat" parent="@style/Base.V22.Theme.AppCompat" />
    <style name="Base.Theme.AppCompat.Light" parent="@style/Base.V22.Theme.AppCompat.Light" />
    <style name="set_wallpaper_destination_item">
        <item name="android:textAppearance">?textAppearanceListItemSmall</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
        <item name="android:textColor">?textColorAlertDialogListItem</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:minHeight">@dimen/set_wallpaper_dialog_item_min_height</item>
        <item name="android:drawablePadding">@dimen/set_wallpaper_dialog_item_drawable_padding</item>
        <item name="android:alpha">0.87</item>
        <item name="android:paddingStart">?dialogPreferredPadding</item>
        <item name="android:paddingEnd">?dialogPreferredPadding</item>
        <item name="android:drawableTint">@color/accent_color</item>
        <item name="android:drawableTintMode">src_atop</item>
