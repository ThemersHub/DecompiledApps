<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:topRightRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:bottomLeftRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:bottomRightRadius="@dimen/lockhart_suggestion_bubble_radius_v2" />
            <solid android:color="@color/suggestion_background" />
            <stroke android:width="@dimen/lockhart_suggestion_bubble_stroke_width" android:color="@color/suggestion_outline" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:topRightRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:bottomLeftRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:bottomRightRadius="@dimen/lockhart_suggestion_bubble_radius_v2" />
            <solid android:color="@color/suggestion_solid_background_fill_v2" />
            <stroke android:width="@dimen/lockhart_suggestion_bubble_stroke_width" android:color="@color/suggestion_focus_border" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:topRightRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:bottomLeftRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:bottomRightRadius="@dimen/lockhart_suggestion_bubble_radius_v2" />
            <solid android:color="@color/suggestion_solid_background_fill_v2" />
            <stroke android:width="@dimen/lockhart_suggestion_bubble_stroke_width" android:color="@color/suggestion_outline" />
        </shape>
    </item>
</selector>