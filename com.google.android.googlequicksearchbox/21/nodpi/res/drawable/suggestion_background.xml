            <stroke android:width="@dimen/lockhart_suggestion_focus_stroke_width" android:color="@color/suggestion_focus_border" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/lockhart_suggestion_bubble_radius" android:topRightRadius="@dimen/lockhart_suggestion_bubble_radius" android:bottomLeftRadius="@dimen/lockhart_suggestion_bubble_radius" android:bottomRightRadius="@dimen/lockhart_suggestion_bubble_radius" />
            <solid android:color="@color/suggestion_solid_background_fill" />
            <stroke android:width="2.0dip" android:color="@color/suggestion_background" />
        </shape>
    </item>
</selector>