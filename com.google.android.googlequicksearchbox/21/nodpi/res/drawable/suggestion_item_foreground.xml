<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:topRightRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:bottomLeftRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:bottomRightRadius="@dimen/lockhart_suggestion_bubble_radius_v2" />
            <stroke android:width="@dimen/lockhart_suggestion_item_stroke_width" android:color="@color/suggestion_item_stroke_disabled" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:topRightRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:bottomLeftRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:bottomRightRadius="@dimen/lockhart_suggestion_bubble_radius_v2" />
            <stroke android:width="@dimen/lockhart_suggestion_item_stroke_width" android:color="@color/suggestion_item_stroke_selected" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:topRightRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:bottomLeftRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:bottomRightRadius="@dimen/lockhart_suggestion_bubble_radius_v2" />
            <stroke android:width="@dimen/lockhart_suggestion_item_stroke_width" android:color="@color/suggestion_item_stroke_selected" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:topRightRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:bottomLeftRadius="@dimen/lockhart_suggestion_bubble_radius_v2" android:bottomRightRadius="@dimen/lockhart_suggestion_bubble_radius_v2" />
            <stroke android:width="@dimen/lockhart_suggestion_item_stroke_width" android:color="@color/suggestion_item_stroke" />
        </shape>
    </item>
</selector>