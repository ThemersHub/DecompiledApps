<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_activated="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/image_viewer_tap_highlight" />
            <corners android:radius="100.0dip" />
            <stroke android:width="1.0dip" android:color="@color/eames_action_button_border" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_activated="false">
        <shape android:shape="rectangle">
            <corners android:radius="100.0dip" />
            <stroke android:width="1.0dip" android:color="@color/eames_action_button_border" />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffd8dfec" />
            <corners android:radius="100.0dip" />
            <stroke android:width="1.0dip" android:color="@color/eames_action_button_border" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffe8f0fe" />
            <corners android:radius="100.0dip" />
            <stroke android:width="1.0dip" android:color="@color/eames_action_button_border" />
        </shape>
    </item>
</selector>