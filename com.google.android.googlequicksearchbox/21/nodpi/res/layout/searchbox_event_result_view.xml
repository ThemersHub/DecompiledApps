            </LinearLayout>
            <TextView android:ellipsize="end" android:id="@id/result_third_line" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" style="@style/IpaSnippetText" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>