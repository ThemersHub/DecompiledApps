    </FrameLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/search_plate" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <FrameLayout android:id="@id/search_widget_google_logo" android:background="@drawable/search_box_click_on_transparent" android:layout_width="wrap_content" android:layout_height="fill_parent" android:scaleType="center" android:contentDescription="@string/accessibility_google_search_button">
            <ImageView android:id="@id/search_widget_google_full" android:paddingLeft="@dimen/search_logo_start_margin" android:paddingTop="@dimen/search_logo_top_padding" android:paddingRight="@dimen/search_logo_end_margin" android:paddingBottom="@dimen/search_logo_bottom_padding" android:layout_width="wrap_content" android:layout_height="fill_parent" android:src="@drawable/ic_searchbox_google" android:scaleType="fitStart" android:paddingStart="@dimen/search_logo_start_margin" android:paddingEnd="@dimen/search_logo_end_margin" />
            <ImageView android:gravity="center" android:id="@id/search_widget_super_g" android:visibility="gone" android:layout_width="@dimen/searchwidget_super_g_width" android:layout_height="fill_parent" android:src="@drawable/super_g" android:scaleType="center" />
        </FrameLayout>
        <include layout="@layout/search_widget_text_box" />
