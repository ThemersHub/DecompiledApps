<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/search_plate_container" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/search_widget_background_protection" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/gradient_protection_2dp" android:scaleType="fitXY" />
    <ImageView android:id="@id/search_widget_background" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/search_widget_bg_2dp" android:scaleType="fitXY" />
    <FrameLayout android:id="@id/more_container" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent">
