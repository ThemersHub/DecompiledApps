            <ImageButton android:id="@id/search_widget_spark_icon" android:paddingLeft="0.0dip" android:src="@drawable/ic_spark_color_24dp" android:contentDescription="@string/accessibility_feed_button" style="@style/SearchWidgetImageButton" />
            <ImageView android:id="@id/search_widget_spark_vertical_divider" android:background="@color/feed_vertical_divider" android:layout_width="@dimen/feed_vertical_divider_width" android:layout_height="@dimen/feed_vertical_divider_height" android:scaleType="centerInside" android:alpha="0.16" />
        </LinearLayout>
        <ImageButton android:id="@id/search_widget_visual_search" android:visibility="gone" android:src="@drawable/google_lens" android:contentDescription="@string/accessibility_visual_search_button" style="@style/SearchWidgetImageButton" />
        <ImageButton android:orientation="horizontal" android:id="@id/search_widget_voice_btn" android:background="@drawable/search_box_click_on_transparent" android:layout_width="@dimen/searchwidget_mic_width" android:layout_height="fill_parent" android:src="@drawable/ic_mic" android:scaleType="center" android:contentDescription="@string/accessibility_voice_search_button" android:layoutDirection="locale" />
        <LinearLayout android:gravity="center" android:id="@id/search_widget_feed_button_container" android:visibility="gone" android:layout_width="@dimen/feed_container_width" android:layout_height="fill_parent">
            <ImageView android:id="@id/search_widget_feed_vertical_divider" android:background="@color/feed_vertical_divider" android:layout_width="@dimen/feed_vertical_divider_width" android:layout_height="@dimen/feed_vertical_divider_height" android:scaleType="centerInside" android:alpha="0.16" />
            <ImageButton android:id="@id/search_widget_feed_button" android:paddingLeft="0.0dip" android:src="@drawable/ic_home_outline" android:tint="@color/feed_icon" android:contentDescription="@string/accessibility_feed_button" style="@style/SearchWidgetImageButton" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>