<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:orientation="horizontal" android:id="@id/links_container" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textDirection="locale" android:layoutDirection="locale" style="@style/ResultContainer"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:paddingTop="@dimen/regular_layout_vertical_margin" android:paddingBottom="@dimen/regular_layout_vertical_margin" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <FrameLayout android:layout_gravity="center_vertical" android:id="@id/icon_with_badge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.0" android:layout_marginStart="@dimen/ipa_thumbnail_horizontal_margin" android:layout_marginEnd="@dimen/ipa_thumbnail_horizontal_margin"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <com.google.android.apps.gsa.plugins.ipa.searchboxui.views.IpaImageView android:layout_gravity="center_vertical" android:id="@id/center_app_icon_thumbnail" android:visibility="gone" android:layout_width="@dimen/ipa_thumbnail_app_icon_width" android:layout_height="@dimen/ipa_thumbnail_app_icon_height" android:scaleType="centerCrop" android:layout_marginStart="@dimen/ipa_thumbnail_app_icon_extra_margin" android:layout_marginEnd="@dimen/ipa_thumbnail_app_icon_extra_margin" />
            <com.google.android.apps.gsa.plugins.ipa.searchboxui.views.IpaImageView android:layout_gravity="center_vertical" android:id="@id/center_thumbnail" android:layout_width="@dimen/ipa_thumbnail_width" android:layout_height="@dimen/ipa_thumbnail_width" android:src="@drawable/blank_thumbnail" android:scaleType="centerCrop" />
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:id="@id/loading_details_container" android:paddingTop="@dimen/loading_mask_line_container_margin" android:paddingBottom="@dimen/loading_mask_line_container_margin" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <View android:background="@color/blank_loading_placeholder_color" android:layout_width="@dimen/loading_mask_line1_length" android:layout_height="@dimen/loading_mask_line_height" android:layout_marginBottom="@dimen/loading_mask_line_inner_margin" />
            <View android:background="@color/blank_loading_placeholder_color" android:layout_width="@dimen/loading_mask_line2_length" android:layout_height="@dimen/loading_mask_line_height" android:layout_marginBottom="@dimen/loading_mask_line_inner_margin" />
            <View android:background="@color/blank_loading_placeholder_color" android:layout_width="@dimen/loading_mask_line3_length" android:layout_height="@dimen/loading_mask_line_height" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@id/result_details_container" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/layout_end_margin">
            <TextView android:ellipsize="end" android:id="@id/link_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_marginEnd="@dimen/first_line_margin_end" style="@style/PrimaryText" />
            <LinearLayout android:id="@id/link_secondLine_container" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.google.android.apps.gsa.plugins.ipa.searchboxui.views.IpaImageView android:layout_gravity="center_vertical" android:id="@id/intent_handler_app_icon" android:visibility="gone" android:layout_width="@dimen/ipa_app_icon_in_snippet_size" android:layout_height="@dimen/ipa_app_icon_in_snippet_size" android:scaleType="centerCrop" android:layout_marginEnd="@dimen/ipa_app_icon_in_snippet_margin" />
                <TextView android:ellipsize="end" android:id="@id/link_secondLine_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" style="@style/SecondLineText" />
            </LinearLayout>
            <TextView android:ellipsize="end" android:id="@id/link_snippet" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" style="@style/SnippetText" />
        </LinearLayout>
    </LinearLayout>
    <TextView android:layout_gravity="end|center|top" android:id="@id/link_timestamp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/regular_layout_vertical_margin" android:layout_marginEnd="@dimen/layout_end_margin" style="@style/TimestampText" />
</FrameLayout>