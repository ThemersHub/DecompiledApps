<?xml version="1.0" encoding="utf-8"?>
<shortcuts
  xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut android:icon="@drawable/launcher_shortcut_upload" android:enabled="true">
        <intent android:targetPackage="com.google.android.apps.docs" android:action="com.google.android.apps.docs.CreateNewDocument.UPLOAD_FILE" android:data="*" android:targetClass="com.google.android.apps.docs.drive.filepicker.PickFilesToUploadActivity" />
    </shortcut>
    <shortcut android:icon="@drawable/launcher_shortcut_scan" android:enabled="true">
        <intent android:targetPackage="com.google.android.apps.docs" android:action="android.intent.action.SEND" android:data="http://drive.google.com" android:targetClass="com.google.android.apps.docs.drive.capture.DocScannerActivity" />
    </shortcut>
    <shortcut android:icon="@drawable/launcher_shortcut_search" android:enabled="true">
        <intent android:targetPackage="com.google.android.apps.docs" android:action="com.google.android.apps.docs.actions.SEARCH_SHORTCUT_ACTION" android:data="" android:targetClass="com.google.android.apps.docs.app.NewMainProxyActivity" />
    </shortcut>
</shortcuts>