<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AccountsSwitcher.SelectedAccountButtonStyle" parent="@style/AccountsSwitcher">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:layout_width">@dimen/expander_icon_width</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="ds_overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow" />
    <style name="ds_progress_bar_spinner" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
    </style>
    <style name="ds_scanner_base_theme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ds_action_bar</item>
    </style>
    <style name="ds_scanner_capture_theme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="ds_scanner_editor_theme" parent="@style/ds_scanner_base_theme">
        <item name="android:actionOverflowButtonStyle">@style/ds_overflow</item>
    </style>
    <style name="ds_scanner_preferences_theme" parent="@style/ds_scanner_base_theme">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="ds_action_bar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/ds_actionbar_background_color</item>
        <item name="android:titleTextStyle">@style/ds_action_bar_compat_title</item>
    </style>
</resources>
