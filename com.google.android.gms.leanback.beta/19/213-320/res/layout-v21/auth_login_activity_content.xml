<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" style="@style/auth_setup_wizard_content_frame"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/username_fixed" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="true" style="@style/auth_setup_wizard_description" />
    <EditText android:id="@id/username_edit" android:hint="@string/auth_username" android:singleLine="true" android:selectAllOnFocus="true" android:capitalize="none" android:inputType="textEmailAddress" android:imeOptions="actionNext" style="@style/auth_setup_wizard_edit_text" />
    <EditText android:id="@id/password_edit" android:hint="@string/auth_password" android:password="true" android:singleLine="true" android:selectAllOnFocus="true" android:inputType="textPassword" android:imeOptions="actionDone" style="@style/auth_setup_wizard_edit_text" />
    <TextView android:textStyle="normal" android:id="@id/browser_signin_button" android:paddingTop="12.0dip" android:text="@string/auth_sign_in_browser" style="@style/auth_setup_wizard_link" />
</LinearLayout>