<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:music="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:id="@id/episode_details_container" android:layout_height="wrap_content" android:layout_centerHorizontal="true" style="@style/EpisodeDetailsContainer">
        <View android:id="@id/spacer" android:layout_width="fill_parent" android:layout_height="@dimen/episode_details_top_grey_area_size" />
        <LinearLayout android:orientation="vertical" android:id="@id/main_details_area" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/spacer" android:layout_alignParentBottom="true">
            <RelativeLayout android:id="@id/colored_area" android:background="@color/white" android:paddingTop="@dimen/episode_details_super_margin_size" android:paddingBottom="@dimen/episode_details_large_margin_size" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:ellipsize="end" android:id="@id/episode_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/material_container_info_padding" android:layout_marginRight="@dimen/material_container_title_margin_right" android:maxLines="3" style="@style/PlayDetailTitle" />
                <RelativeLayout android:id="@id/container_metadata" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/episode_details_medium_margin_size" android:layout_below="@id/episode_title">
                    <include android:id="@id/series_metadata" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@id/download_button" layout="@layout/material_avatar_with_text" />
                    <com.google.android.music.ui.common.KeepOnView android:id="@id/download_button" android:layout_width="@dimen/episode_details_small_buttons_size" android:layout_height="@dimen/episode_details_small_buttons_size" android:layout_marginLeft="@dimen/episode_details_small_buttons_margin" android:layout_marginRight="@dimen/episode_details_small_buttons_margin" android:layout_toLeftOf="@id/share_button" android:layout_centerVertical="true" music:uiResourceSize="medium" music:informationalOnly="false" />
                    <ImageView android:id="@id/share_button" android:layout_width="@dimen/episode_details_small_buttons_size" android:layout_height="@dimen/episode_details_small_buttons_size" android:layout_marginRight="@dimen/episode_details_small_buttons_margin_edge" android:src="@drawable/ic_share_black" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/accessibility_episode_details_share_button" />
