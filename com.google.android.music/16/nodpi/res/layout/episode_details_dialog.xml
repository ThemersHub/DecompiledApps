            </com.google.android.music.ui.dialogs.DismissableScrollView>
        </LinearLayout>
        <ImageButton android:id="@id/fab_play" android:layout_marginTop="@dimen/episode_details_fab_button_negative_offset" android:layout_marginRight="@dimen/material_container_info_padding" android:layout_alignTop="@id/main_details_area" android:layout_alignParentRight="true" android:contentDescription="@string/accessibility_play" style="@style/FabPlay" />
    </RelativeLayout>
</RelativeLayout>