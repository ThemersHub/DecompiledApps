<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Setup" parent="@android:style/Theme.Material.Light.NoActionBar" />
    <style name="HeadlineText" parent="@android:style/TextAppearance">
        <item name="android:textSize">24.0sp</item>
        <item name="android:textColor">@color/title_text</item>
    </style>
