<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <set>
            <objectAnimator android:duration="225" android:pivotX="50.0%" android:pivotY="50.0%" android:valueFrom="180" android:valueTo="0" android:valueType="floatType" android:propertyName="rotation" />
        </set>
    </item>
    <item android:state_checked="false">
        <set>
            <objectAnimator android:duration="225" android:pivotX="50.0%" android:pivotY="50.0%" android:valueFrom="-180" android:valueTo="0" android:valueType="floatType" android:propertyName="rotation" />
        </set>
    </item>
</selector>