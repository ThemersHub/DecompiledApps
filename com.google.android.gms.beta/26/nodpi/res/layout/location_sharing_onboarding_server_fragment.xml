        </ScrollView>
        <TextView android:textSize="@dimen/location_sharing_text_size_12" android:textColor="@android:color/white" android:textColorLink="@android:color/white" android:id="@id/footer_text" android:background="@color/location_sharing_onboarding_footer_blue" android:paddingTop="@dimen/location_sharing_small_padding" android:paddingBottom="@dimen/location_sharing_small_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/location_sharing_large_padding" android:paddingEnd="@dimen/location_sharing_large_padding" />
    </LinearLayout>
</FrameLayout>