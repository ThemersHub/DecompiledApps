    <FrameLayout android:id="@id/SpinnerContainer" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <com.google.android.libraries.material.progress.MaterialProgressBar android:layout_gravity="center" android:id="@id/Spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" />
