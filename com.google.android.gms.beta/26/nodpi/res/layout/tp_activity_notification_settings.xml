        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/tp_emails_notification_setting_description" android:layout_below="@id/EmailsTitle" android:layout_toStartOf="@id/EmailsSwitch" style="@style/Tp_Text_Subhead" />
