    <RelativeLayout android:id="@id/EmailsSettingContainer" android:background="@drawable/tp_bounded_rippleable" android:padding="@dimen/tp_default_spacing" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
