    <LinearLayout android:orientation="vertical" android:id="@id/NonGooglePayTransactions" android:background="@drawable/tp_bounded_rippleable" android:padding="@dimen/tp_default_spacing" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:paddingBottom="@dimen/tp_narrow_spacing" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/tp_payment_card_setting_heading" style="@style/Tp_Text_Header" />
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/tp_payment_card_setting_subheading" style="@style/Tp_Text_Subhead" />
        <LinearLayout android:orientation="vertical" android:id="@id/PaymentCardContainer" android:layout_width="fill_parent" android:layout_height="wrap_content" />
