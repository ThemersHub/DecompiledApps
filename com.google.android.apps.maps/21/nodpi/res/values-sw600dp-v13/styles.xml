<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToastBar">
        <item name="android:background">@drawable/toastbar_background_rounded</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/toastbar_margin</item>
        <item name="android:layout_marginBottom">@dimen/toastbar_margin</item>
        <item name="android:layout_marginStart">@dimen/toastbar_margin</item>
        <item name="maxWidthLinearLayoutWidth">@dimen/toastbar_maximum_width</item>
    </style>
    <style name="ToastBarTwoButtonContainer" parent="@style/ToastBarTwoButtonContainer_Base">
        <item name="maxWidthLinearLayoutWidth">@dimen/toastbar_maximum_width</item>
    </style>
    <style name="ToastBar_Container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ToastbarButton" parent="@style/ToastbarButtonBase">
        <item name="android:maxWidth">@dimen/toastbar_button_maximum_width</item>
    </style>
    <style name="ToastbarTextLine" parent="@style/ToastbarTextLine_Base">
        <item name="android:maxWidth">@dimen/toastbar_maximum_width</item>
    </style>
    <style name="Widget.Design.TabLayout" parent="@style/Base.Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">center</item>
    </style>
</resources>
