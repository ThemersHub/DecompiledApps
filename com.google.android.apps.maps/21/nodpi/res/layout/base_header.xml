<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" style="@style/GmmActionBar"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" style="@style/HorizontalContainer">
        <LinearLayout android:gravity="center_vertical" android:id="@id/up_button" android:background="?android:selectableItemBackground" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1.0" style="@style/HorizontalContent">
            <ImageView style="@style/UpHeaderButton" />
            <ImageView android:id="@id/actionbar_image" style="@style/ActionBarImage" />
            <LinearLayout android:id="@id/title_container" android:layout_marginEnd="@dimen/text_spacer" style="@style/HorizontalFillerContainer">
                <TextView android:id="@id/header_textbox" style="@style/HeaderTextBox" />
                <TextView android:id="@id/subtitle_textbox" android:visibility="gone" style="@style/HeaderSubtitleTextBox" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="start|center" android:id="@id/tab_group" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/tabbed_header_tab_height" android:layout_weight="0.0" style="@style/TabbedActionBarContent" />
        <ImageButton android:gravity="end" android:id="@id/menu_button" android:visibility="gone" android:layout_weight="0.0" android:contentDescription="@string/ACCESSIBILITY_MENU" style="@style/MenuHeaderButton" />
        <Button android:gravity="center" android:id="@id/next_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.0" android:contentDescription="@string/NEXT" />
    </LinearLayout>
</LinearLayout>