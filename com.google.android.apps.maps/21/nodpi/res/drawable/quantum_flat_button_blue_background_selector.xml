<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:drawable="@color/quantum_googblue300" />
    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <solid android:color="@color/quantum_googblue" />
            <corners android:radius="@dimen/qu_flat_button_corner_radius" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/quantum_googblue700" />
            <corners android:radius="@dimen/qu_flat_button_corner_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/quantum_grey300" />
            <corners android:radius="@dimen/qu_flat_button_corner_radius" />
        </shape>
    </item>
</selector>