<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StatusPageSubtitleText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/status_subtitle</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>
    <style name="SuwGlifHeaderTitle" parent="@style/SuwBaseHeaderTitle">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:gravity">?suwGlifHeaderGravity</item>
        <item name="android:layout_marginLeft">?suwMarginSides</item>
        <item name="android:layout_marginTop">@dimen/suw_glif_header_title_margin_top</item>
        <item name="android:layout_marginRight">?suwMarginSides</item>
        <item name="android:layout_marginBottom">@dimen/suw_glif_header_title_margin_bottom</item>
        <item name="android:fontFamily">@string/suwFontSecondary</item>
    </style>
    <style name="SuwNavBarButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/suw_navbar_text_size</item>
        <item name="android:textColor">?suwNavBarTextColor</item>
        <item name="android:background">?suwNavBarButtonBackground</item>
        <item name="android:paddingLeft">@dimen/suw_navbar_button_padding_sides</item>
        <item name="android:paddingRight">@dimen/suw_navbar_button_padding_sides</item>
        <item name="android:minWidth">0.0dip</item>
        <item name="android:drawablePadding">@dimen/suw_navbar_button_drawable_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="TextAppearance.AppCompat.Tooltip" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">14.0sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
