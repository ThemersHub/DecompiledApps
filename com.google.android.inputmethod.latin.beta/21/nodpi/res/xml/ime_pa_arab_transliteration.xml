<?xml version="1.0" encoding="utf-8"?>
<framework>
    <ime string_id="ime_punjabi_arabic_transliteration" class="com.google.android.apps.inputmethod.libs.latin5.LatinIme" language="pa-XT" always_show_suggestions="true" auto_capital="true" display_app_completions="true" announce_auto_selected_candidate="true">
        <if number_row="false">
            <keyboard_group variant="qwerty" variant_label="@string/variant_pa_arab_transliteration">
                <keyboard type="prime" def="@xml/keyboard_fragment_en_without_longpresses" transliterate="true">
                    <merge def="@xml/keyboard_latin_qwerty_t13n_arabic" />
                </keyboard>
                <include href="@xml/keyboards_non_prime_latin" />
            </keyboard_group>
        </if>
        <else>
            <keyboard_group variant="qwerty" variant_label="@string/variant_pa_arab_transliteration" layout_theme="@style/KeyboardLayoutTheme.WithNumberRow">
                <keyboard type="prime" def="@xml/keyboard_fragment_en_without_longpresses" transliterate="true">
                    <merge def="@xml/keyboard_latin_qwerty_t13n_arabic" />
                    <merge def="@xml/keyboard_latin_fragment_numbers_10_10_9_9_t13n" />
                </keyboard>
                <include href="@xml/keyboards_non_prime_latin" />
            </keyboard_group>
        </else>
        <extra_values>
            <item id="@id/extra_value_is_transliteration" value="true" />
            <item id="@id/extra_value_latin_max_candidates_requested" value="20" />
            <item id="@id/extra_value_has_more_candidates_view" value="true" />
        </extra_values>
    </ime>
</framework>