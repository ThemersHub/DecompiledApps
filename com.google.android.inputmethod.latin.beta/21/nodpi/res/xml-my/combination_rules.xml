<?xml version="1.0" encoding="utf-8"?>
<rules>
    <rule>
        <regex>ဥ့်$</regex>
        <replacement>ဉ့်</replacement>
    </rule>
    <rule>
        <regex>ဥ([ါာဲ္-ှ])$</regex>
        <replacement>ဉ\1</replacement>
    </rule>
    <rule>
        <regex>ဥ(း?)ိ$</regex>
        <replacement>ဦ\1</replacement>
    </rule>
    <rule>
        <regex>ဥ(း?)ီ$</regex>
        <replacement>ဦ\1</replacement>
    </rule>
    <rule>
        <regex>သေြ$</regex>
        <replacement>ဩေ</replacement>
    </rule>
    <rule>
        <regex>သြ$</regex>
        <replacement>ဩ</replacement>
    </rule>
    <rule>
        <regex>ဩော်$</regex>
        <replacement>ဪ</replacement>
    </rule>
    <rule>
        <regex>၀ာ$</regex>
        <replacement>ဝါ</replacement>
    </rule>
    <rule>
        <regex>၀([ါ-ှ])$</regex>
        <replacement>ဝ\1</replacement>
    </rule>
    <rule>
        <regex>၁ာ$</regex>
        <replacement>ဘ</replacement>
    </rule>
    <rule>
        <regex>၄င်း$</regex>
        <replacement>၎င်း</replacement>
    </rule>
    <rule>
        <regex>ဧ။်$</regex>
        <replacement>၏</replacement>
    </rule>
    <rule>
        <regex>‌ေ([ငရ]်္)$</regex>
        <replacement>\1ေ</replacement>
    </rule>
    <rule>
        <regex>([ငရ]်္)ေ([က-ဪဿ-ၕ])$</regex>
        <replacement>\1\2ေ</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])ေ္$</regex>
        <replacement>‌ေ\1္</replacement>
    </rule>
    <rule>
        <regex>‌ေ([က-ဪဿ-ၕ])္([က-ဪဿ-ၕ])$</regex>
        <replacement>\1္\2ေ</replacement>
    </rule>
    <rule>
        <regex>‌ေဥ$</regex>
        <replacement>ဉေ</replacement>
    </rule>
    <rule>
        <regex>‌ေ၀$</regex>
        <replacement>ဝေ</replacement>
    </rule>
    <rule>
        <regex>‌ေ([က-ဪဿ-ၕ])$</regex>
        <replacement>\1ေ</replacement>
    </rule>
    <rule>
        <regex>([ါာ])့်$</regex>
        <replacement>\1့်</replacement>
    </rule>
    <rule>
        <regex>စ(်?)(ြ?)(ွ?)(ှ?)([ါ-ံ]*)(့?)ျ$</regex>
        <replacement>ဈ\1\2\3\4\5\6</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])(ွ?)ှ်$</regex>
        <replacement>\1\2ှ်</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])([ျ-ှ]*)(ေ?)([ိီ]?)([ုူ]?)(ဲ?)(ံ?)်$</regex>
        <replacement>\1်\2\3\5</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])(်?)(ျ?)(ြ?)(ွ?)(ှ?)([ိ-ံ]*)်$</regex>
        <replacement>\1်\3\4\5\6\7</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])(်?)(ွ?)(ှ?)([ါ-ံ]*)(့?)်$</regex>
        <replacement>\1\3\4\5\6်</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])(်?)(ျ?)(ြ?)(ွ?)(ှ?)([ါ-ံ]*)(့?)ျ$</regex>
        <replacement>\1\2ျ\4\5\6\7\8</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])(်?)(ျ?)(ြ?)(ွ?)(ှ?)([ါ-ံ]*)(့?)ြ$</regex>
        <replacement>\1\2\3ြ\5\6\7\8</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])(်?)(ျ?)(ြ?)(ွ?)(ှ?)([ါ-ံ]*)(့?)ွ$</regex>
        <replacement>\1\2\3\4ွ\6\7\8</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])်ှ$</regex>
        <replacement>\1ှ်</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])(ျ?)(ြ?)(ွ?)(ှ?)([ါ-ံ]*)(့?)ှ$</regex>
        <replacement>\1\2\3\4ှ\6\7</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])([ိ-ံွှ]*)်([ိ-ံွှ]*)့$</regex>
        <replacement>\1\2့်\3</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])(်?)([ေျ-ှ]*)([ိီ]?)([ုူ]?)(ဲ?)(ံ?)(့?)ိ$</regex>
        <replacement>\1\3ိ\5\7\8</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])(်?)([ေျ-ှ]*)([ိီ]?)([ုူ]?)(ဲ?)(ံ?)(့?)ီ$</regex>
        <replacement>\1\3ီ\5\7\8</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])(်?)([ေျ-ှ]*)([ိီ]?)([ုူ]?)(ဲ?)(ံ?)(့?)ု$</regex>
        <replacement>\1\2\3\4ု\6\7\8</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])(်?)([ေျ-ှ]*)([ိီ]?)([ုူ]?)(ဲ?)(ံ?)(့?)ူ$</regex>
        <replacement>\1\2\3\4ူ\6\7\8</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])(်?)([ေျ-ှ]*)([ိီ]?)([ုူ]?)(ဲ?)(ံ?)(့?)ဲ$</regex>
        <replacement>\1\3\5ဲ\8</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])(်?)([ေျ-ှ]*)([ိီ]?)([ုူ]?)(ဲ?)(ံ?)(့?)ံ$</regex>
        <replacement>\1\3\4\5ံ\8</replacement>
    </rule>
    <rule>
        <regex>([က-ဪဿ-ၕ])([ါ-ှ]*)$</regex>
        <replacement>\1\2</replacement>
    </rule>
</rules>