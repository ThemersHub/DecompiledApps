            <TextView android:id="@id/card_localtime_date" android:layout_marginTop="1.0dip" android:maxLines="@integer/short_string_max_lines_fixed" android:layout_below="@id/card_localtime_time" style="@style/TextLine.Secondary" />
            <TextView android:id="@id/card_localtime_location" android:layout_marginTop="1.0dip" android:maxLines="@integer/short_string_max_lines_fixed" android:layout_below="@id/card_localtime_date" style="@style/TextLine.Secondary" />
        </RelativeLayout>
        <include layout="@layout/action_view" />
    </LinearLayout>
</android.support.v7.widget.CardView>