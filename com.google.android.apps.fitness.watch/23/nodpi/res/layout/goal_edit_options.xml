<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:id="@id/goal_edit" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/GoalEditItem">
        <android.support.wearable.view.CircledImageView android:id="@id/goal_edit_circle" android:layout_width="@dimen/goal_edit_circled_image_size" android:layout_height="@dimen/goal_edit_circled_image_size" android:src="@drawable/quantum_ic_mode_edit_white_24" style="@style/GoalEditCircle" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/edit_goal_label" style="@style/Text.Title" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/goal_delete" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/GoalEditItem">
        <android.support.wearable.view.CircledImageView android:id="@id/goal_delete_circle" android:layout_width="@dimen/goal_edit_circled_image_size" android:layout_height="@dimen/goal_edit_circled_image_size" android:src="@drawable/quantum_ic_delete_white_24" style="@style/GoalEditCircle" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/delete_goal_label" style="@style/Text.Title" />
    </LinearLayout>
</LinearLayout>