<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/button_ripple_background"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask" android:drawable="@drawable/palette_button_mask" />
    <item>
        <selector>
            <item android:state_checked="true" android:drawable="@drawable/palette_button_checked_background" />
            <item android:drawable="@drawable/palette_button_checked_background" android:state_activated="true" />
            <item android:drawable="@drawable/palette_button_default_background" />
        </selector>
    </item>
</ripple>