<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@id/ketchup_container_view" android:background="@drawable/ketchup_background" style="@style/ketchup_container_view"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.5">
        <ImageView android:id="@id/ketchup_alert" android:src="@drawable/ic_alert_white" android:contentDescription="@string/alert" style="@style/ketchup_alert" />
        <TextView android:id="@id/ketchup_text" android:text="Message text." style="@style/ketchup_text" />
    </LinearLayout>
    <View android:id="@id/ketchup_separator" style="@style/ketchup_separator" />
    <TextView android:id="@id/ketchup_action" android:background="@drawable/ketchup_action_background" android:text="Action" style="@style/ketchup_action" />
</LinearLayout>