<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@id/punch_remote_arrow_background_shadow">
        <shape android:shape="oval">
            <gradient android:endColor="@android:color/transparent" android:useLevel="false" android:type="radial" android:gradientRadius="0.0" android:centerColor="@color/punch_remote_arrow_shadow_start_color" />
            <size android:height="@dimen/presentation_remote_arrow_background_size" android:width="@dimen/presentation_remote_arrow_background_size" />
        </shape>
    </item>
    <item android:right="@dimen/presentation_remote_arrow_shadow_size" android:bottom="@dimen/presentation_remote_arrow_shadow_size">
        <shape android:shape="oval">
            <solid android:color="@color/remote_arrow_color" />
            <size android:height="@dimen/presentation_remote_arrow_size" android:width="@dimen/presentation_remote_arrow_size" />
        </shape>
    </item>
</layer-list>