<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/permission_request_page" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/screencap_interstitial_explanation" />
        <Button android:id="@id/screencap_decline" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/screencap_decline" />
        <Button android:id="@id/screencap_enable" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/screencap_enable" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/tutorial_page" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/screencap_tutorial_text" />
        <Button android:id="@id/tutorial_finish" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/screencap_tutorial_finish" />
    </LinearLayout>
</FrameLayout>