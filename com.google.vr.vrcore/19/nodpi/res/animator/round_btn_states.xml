<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_hovered="true">
        <set>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="16.0dip" android:valueType="floatType" android:propertyName="elevation" />
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="1.17" android:valueType="floatType" android:propertyName="scaleX" />
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="1.17" android:valueType="floatType" android:propertyName="scaleY" />
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="0" android:valueType="floatType" android:propertyName="elevation" />
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleX" />
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleY" />
        </set>
    </item>
</selector>