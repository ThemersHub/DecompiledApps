<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="VrCorePairingActivityTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/DialogFadeTransitions</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="VrCoreSettingsActivityTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/StandaloneActionBarStyle</item>
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
        <item name="android:actionBarTheme">@style/StandaloneActionBarTheme</item>
        <item name="actionBarStyle">@style/StandaloneActionBarStyle</item>
        <item name="actionBarTheme">@style/StandaloneActionBarTheme</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>
    <style name="DialogFadeTransitions">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="StandaloneActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/StandaloneActionBarTitleText</item>
        <item name="titleTextStyle">@style/StandaloneActionBarTitleText</item>
    </style>
    <style name="StandaloneActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>
    <style name="StandaloneActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
