        <shape android:shape="rectangle">
            <solid android:color="@color/controller_ota_progress_bg" />
            <corners android:topLeftRadius="4.0dip" android:topRightRadius="4.0dip" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/controller_ota_progress_fg" />
                <corners android:topLeftRadius="4.0dip" android:topRightRadius="4.0dip" />
            </shape>
        </clip>
    </item>
</layer-list>