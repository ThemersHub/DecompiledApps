<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:focusableInTouchMode="true" style="@style/setup_wizard_content_frame"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/description_text" android:layout_marginBottom="@dimen/name_description_text_margin_bottom" android:text="@string/name_text" style="@style/setup_wizard_description" />
    <com.google.android.setupwizard.util.FloatingLabelLayout android:textAppearance="@android:style/TextAppearance.Material.Caption" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/name_edit_margin_top" android:text="@string/first_name">
        <EditText android:id="@id/first_name_edit" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/NameEdit" />
    </com.google.android.setupwizard.util.FloatingLabelLayout>
    <com.google.android.setupwizard.util.FloatingLabelLayout android:textAppearance="@android:style/TextAppearance.Material.Caption" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/name_edit_margin_top" android:text="@string/last_name">
        <EditText android:id="@id/last_name_edit" android:layout_width="fill_parent" android:layout_height="wrap_content" android:imeOptions="actionDone" style="@style/NameEdit" />
    </com.google.android.setupwizard.util.FloatingLabelLayout>
