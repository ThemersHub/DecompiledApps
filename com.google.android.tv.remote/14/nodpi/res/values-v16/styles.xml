<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DrawerTextAppearance" parent="@style/BaseDrawerTextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="HubTextAppearance">
        <item name="android:textSize">@dimen/hublist_button_text_size</item>
        <item name="android:textColor">@color/hublist_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/hublist_item_text_padding</item>
        <item name="android:paddingRight">@dimen/hublist_item_text_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="HubListButtonTextAppearance">
        <item name="android:textSize">@dimen/hublist_button_text_size</item>
        <item name="android:textColor">@color/hublist_button_text_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="HubListMessageTextAppearance">
        <item name="android:textSize">@dimen/hublist_description_text_size</item>
        <item name="android:textColor">@color/hublist_text_color</item>
        <item name="android:lineSpacingMultiplier">@dimen/hublist_line_spacing_multiplier</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="HubTextAppearance.Description" parent="@style/HubTextAppearance">
        <item name="android:textSize">@dimen/about_item_description_text_size</item>
        <item name="android:alpha">0.6</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>
    <style name="PairingEditTextAppearance">
        <item name="android:textSize">@dimen/pairing_edit_text_size</item>
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textColorHint">#80eeeeee</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">4</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="PermissionButtonStyle">
        <item name="android:textSize">@dimen/permission_button_text_size</item>
        <item name="android:textColor">@color/permission_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/permission_button_height</item>
        <item name="android:layout_marginTop">@dimen/permission_button_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/permission_button_margin_vertical</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="PermissionTextStyle">
        <item name="android:textSize">@dimen/permission_text_size</item>
        <item name="android:textColor">@color/permission_text_color</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:fontFamily">Roboto-Regular</item>
    </style>
    <style name="PermissionTitleTextStyle">
        <item name="android:textSize">@dimen/permission_title_text_size</item>
        <item name="android:textColor">@color/permission_text_color</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily">Roboto-Regular</item>
    </style>
    <style name="TextAppearance">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TosBodyTextAppearance">
        <item name="android:textSize">@dimen/tos_body_text_size</item>
        <item name="android:textColor">@color/tos_body_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="TosButtonTextAppearance">
        <item name="android:textSize">@dimen/tos_button_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="TosHeaderTextAppearance">
        <item name="android:textSize">@dimen/tos_header_text_size</item>
        <item name="android:textColor">@color/tos_header_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
