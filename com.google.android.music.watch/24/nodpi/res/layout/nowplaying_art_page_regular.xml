<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/nowplaying_art_bg" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.music.ui.art.SimpleArtView android:layout_gravity="center" android:id="@id/album" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="centerCrop" android:layout_centerInParent="true" />
    <ImageView android:id="@id/youtube_overlay" android:background="@color/black" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    <ImageView android:id="@id/youtube_play_red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_yt_nowplaying_red" android:layout_centerInParent="true" android:contentDescription="@string/youtube_button_description" />
    <TextView android:textColor="@color/white" android:gravity="center" android:id="@id/youtube_widget_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/video_thumbnail_description" android:layout_below="@id/youtube_play_red" android:layout_centerHorizontal="true" />
    <ImageView android:id="@id/youtube_widget_white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/yt_nowplaying_white" android:layout_centerInParent="true" android:contentDescription="@string/youtube_button_description" />
</RelativeLayout>