<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/empty_screen" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ProgressBar android:id="@id/empty_spinner" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" />
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/empty_state_content" android:layout_width="@dimen/empty_screen_content_width" android:layout_height="wrap_content">
        <ImageView android:id="@id/empty_icon" android:visibility="gone" android:layout_width="@dimen/empty_screen_image_dimension" android:layout_height="@dimen/empty_screen_image_dimension" android:layout_marginTop="@dimen/empty_screen_icon_top_margin" android:layout_marginBottom="@dimen/empty_screen_icon_bottom_margin" />
        <TextView android:gravity="center_horizontal" android:id="@id/empty_text" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/empty_screen_text_bottom_margin" style="@style/EmptyScreenText" />
        <TextView android:gravity="center_horizontal" android:id="@id/empty_sub_text" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/empty_screen_sub_text_bottom_margin" style="@style/EmptyScreenSubText" />
        <Button android:id="@id/empty_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/empty_screen_button_height" android:layout_marginBottom="@dimen/empty_screen_button_margin" style="@style/EmptyScreenButton" />
        <Button android:id="@id/empty_learn_more" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/empty_screen_button_height" style="@style/EmptyScreenButton" />
    </LinearLayout>
</LinearLayout>