<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="ring" android:useLevel="false" android:innerRadius="@dimen/download_progress_bar_inner_radius" android:thickness="@dimen/progress_bar_thickness">
            <solid android:color="@android:color/black" />
        </shape>
    </item>
    <item>
        <rotate android:fromDegrees="-90.0" android:toDegrees="-90.0">
            <shape android:shape="ring" android:useLevel="true" android:innerRadius="@dimen/download_progress_bar_inner_radius" android:thickness="@dimen/progress_bar_thickness">
                <solid android:color="@android:color/white" />
            </shape>
        </rotate>
    </item>
</layer-list>