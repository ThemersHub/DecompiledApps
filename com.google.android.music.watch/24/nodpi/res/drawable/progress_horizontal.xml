<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="line">
            <stroke android:width="@dimen/seek_bar_background_height" android:color="@color/nowplaying_progressbar_bg" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="line">
                <stroke android:width="@dimen/seek_bar_background_height" android:color="@color/nowplaying_progressbar_secondary_progress" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="line">
                <stroke android:width="@dimen/seek_bar_background_height" android:color="@color/nowplaying_progressbar_progress" />
            </shape>
        </clip>
    </item>
</layer-list>