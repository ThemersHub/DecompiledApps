<?xml version="1.0" encoding="utf-8"?>
<selector android:exitFadeDuration="@integer/short_animation_time"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/playback_progress" />
            <size android:height="@dimen/playback_seekbar_thumb_size" android:width="@dimen/playback_seekbar_thumb_size" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <size android:height="@dimen/playback_seekbar_thumb_size" android:width="@dimen/playback_seekbar_thumb_size" />
        </shape>
    </item>
</selector>