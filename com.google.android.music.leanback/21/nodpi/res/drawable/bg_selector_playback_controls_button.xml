<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/playback_controls_background_selected"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <selector android:constantSize="true">
            <item android:state_focused="true">
                <shape android:shape="oval">
                    <solid android:color="@color/ripple_mask_color" />
                    <size android:height="@dimen/playback_control_button_size" android:width="@dimen/playback_control_button_size" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>