<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PlayCardAction" parent="@style/PlayMediumPlainText">
        <item name="android:textSize">@dimen/play_card_action_size</item>
    </style>
    <style name="PlayDrawerAccountAvatar">
        <item name="android:layout_width">@dimen/play_drawer_account_avatar_size</item>
        <item name="android:layout_height">@dimen/play_drawer_account_avatar_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">16.0dip</item>
    </style>
    <style name="PlayDrawerBaseText" parent="@style/PlayMediumPlainText">
        <item name="android:textSize">@dimen/play_drawer_primary_size</item>
        <item name="android:textColor">@color/play_fg_primary</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/play_highlight_overlay_light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/play_drawer_item_primary_min_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">32.0dip</item>
        <item name="android:paddingStart">@dimen/play_drawer_item_left_padding</item>
        <item name="android:paddingEnd">@dimen/play_drawer_item_right_padding</item>
    </style>
    <style name="PlayDrawerDisabledText" parent="@style/PlayDrawerRegularText">
        <item name="android:textColor">@color/play_disabled_grey</item>
    </style>
    <style name="PlayDrawerProfileEmailText" parent="@style/PlayPlainText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/play_white</item>
    </style>
    <style name="PlayDrawerProfileNameText" parent="@style/PlayMediumPlainText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/play_white</item>
    </style>
    <style name="PlayDrawerRegularText" parent="@style/PlayDrawerBaseText" />
    <style name="PlayDrawerSelectedText" parent="@style/PlayDrawerBaseText">
        <item name="android:textStyle">bold</item>
        <item name="android:background">#ffeeeeee</item>
    </style>
    <style name="PlayEduCardButtonPanel">
        <item name="playSpacing">8.0dip</item>
    </style>
    <style name="PlayGridBoldText">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="PlayHeaderListTabText" parent="@style/PlayMediumBoldText">
        <item name="android:textSize">@dimen/play_header_list_text_size</item>
        <item name="android:textColor">@color/play_header_list_tab_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/play_header_list_tab_padding_side</item>
        <item name="android:paddingEnd">@dimen/play_header_list_tab_padding_side</item>
    </style>
    <style name="PlayMediumBoldText" parent="@style/PlayGridBoldText" />
    <style name="PlayMediumPlainText" parent="@style/PlayPlainText" />
    <style name="PlayOnboardInterstitialGridCell">
        <item name="android:tag">@string/play_onboard_interstitial_grid_cell</item>
        <item name="android:layout_width">@dimen/play_onboard__onboard_interstitial_overlay_grid_cell_size</item>
        <item name="android:layout_height">@dimen/play_onboard__onboard_interstitial_overlay_grid_cell_size</item>
        <item name="android:layout_margin">@dimen/play_onboard__onboard_interstitial_overlay_grid_half_spacing</item>
    </style>
    <style name="PlayOnboardInterstitialGridRow">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="PlayOnboardNavFooterButton">
        <item name="android:textAppearance">@style/PlayCardAction</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/play_action_button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/play_onboard_dark_button_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:maxHeight">48.0dip</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">@dimen/play_onboard__onboard_nav_footer_button_padding</item>
        <item name="android:paddingEnd">@dimen/play_onboard__onboard_nav_footer_button_padding</item>
    </style>
    <style name="PlayOnboardSimpleQuizCardListView">
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:cacheColorHint">#ffeeeeee</item>
        <item name="android:dividerHeight">0.0dip</item>
        <item name="android:paddingStart">@dimen/play_onboard__onboard_simple_quiz_list_side_padding</item>
        <item name="android:paddingEnd">@dimen/play_onboard__onboard_simple_quiz_list_side_padding</item>
    </style>
    <style name="PlayOnboardSimpleQuizHeaderText">
        <item name="android:textSize">@dimen/play_onboard__onboard_simple_quiz_title_text_size</item>
        <item name="android:textColor">@color/play_onboard_simple_quiz_title_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/play_onboard__onboard_simple_quiz_title_padding_top</item>
        <item name="android:paddingBottom">@dimen/play_onboard__onboard_simple_quiz_title_padding_bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">4</item>
        <item name="android:minLines">1</item>
    </style>
    <style name="PlayPlainText">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="PlaySearchSuggestionText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/play_fg_primary</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="PlaySearchSuggestionText.Query" parent="@style/PlaySearchSuggestionText">
        <item name="android:textColor">@color/play_fg_tertiary</item>
    </style>
    <style name="PlaySearchSuggestionText.Suggested" parent="@style/PlaySearchSuggestionText">
        <item name="android:textColor">@color/play_fg_primary</item>
    </style>
    <style name="PlayDrawerDownloadToggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textOn">" "</item>
        <item name="android:textOff">" "</item>
        <item name="android:switchMinWidth">56.0dip</item>
    </style>
</resources>
