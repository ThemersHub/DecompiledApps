<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/setting_input"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference android:persistent="true" android:title="@string/setting_double_space_period_title" android:key="@string/pref_key_enable_double_space_period" />
    <CheckBoxPreference android:persistent="true" android:title="@string/setting_next_word_prediction_title" android:key="@string/pref_key_next_word_prediction" android:summary="@string/setting_next_word_prediction_summary" />
    <PreferenceCategory android:title="@string/setting_english_input">
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_auto_capitalization_title" android:key="@string/pref_key_auto_capitalization" />
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_spell_correction_title" android:key="@string/pref_key_latin_auto_correction" />
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_gesture_input_title" android:key="@string/pref_key_enable_gesture_input" android:summary="@string/setting_gesture_input_summary" />
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_show_suggestion_title" android:key="@string/pref_key_latin_show_suggestion" android:summary="@string/setting_show_suggestion_summary" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/setting_hindi_input">
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_spell_correction_title" android:key="@string/pref_key_enable_spatial_model" />
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_auto_space_smart_punctuation_title" android:key="@string/pref_key_auto_space_smart_punctuation" />
    </PreferenceCategory>
</PreferenceScreen>