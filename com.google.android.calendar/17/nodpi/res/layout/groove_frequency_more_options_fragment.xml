<?xml version="1.0" encoding="utf-8"?>
<FrameLayout style="@style/GrooveOuterFrame"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:id="@id/frame" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:id="@id/inset_frame" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <include layout="@layout/back_button" />
            <LinearLayout android:orientation="vertical" android:id="@id/text_container" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:id="@id/frequency_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/groove_frequency_title" style="@style/GrooveCreationWizardTitle" />
                <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:fadeScrollbars="false">
                    <LinearLayout android:orientation="vertical" android:id="@id/options_container" android:layout_width="fill_parent" android:layout_height="wrap_content" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>