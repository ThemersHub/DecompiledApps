<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/frequency_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/groove_frequency_title" style="@style/GrooveCreationWizardTitle" />
    <LinearLayout android:orientation="vertical" android:id="@id/weekly_frequencies" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/weekly_one_time_per_week" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/groove_frequency_one_time_per_week" style="@style/GrooveCreationWizardButton" />
        <Button android:id="@id/weekly_three_times_per_week" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/groove_frequency_three_times_per_week" style="@style/GrooveCreationWizardButton" />
        <Button android:id="@id/weekly_five_times_per_week" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/groove_frequency_five_times_per_week" style="@style/GrooveCreationWizardButton" />
        <Button android:id="@id/weekly_every_day" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/every_day" style="@style/GrooveCreationWizardButton" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/monthly_frequencies" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/monthly_one_time_per_month" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/groove_frequency_one_time_per_month" style="@style/GrooveCreationWizardButton" />
        <Button android:id="@id/monthly_two_times_per_month" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/groove_frequency_two_times_per_month" style="@style/GrooveCreationWizardButton" />
        <Button android:id="@id/monthly_one_time_per_week" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/groove_frequency_one_time_per_week" style="@style/GrooveCreationWizardButton" />
    </LinearLayout>
    <Button android:id="@id/frequency_more_options" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/groove_frequency_more_options" style="@style/GrooveCreationWizardButton" />
</merge>