        <ImageButton android:layout_gravity="top" android:id="@id/cancel_button" android:background="@null" android:padding="@dimen/round_ui_small_button_padding" android:layout_width="@dimen/round_ui_small_button_size" android:layout_height="@dimen/round_ui_small_button_size" android:layout_marginLeft="@dimen/round_ui_margin_between_buttons" android:src="@drawable/quantum_ic_clear_vd_theme_24" android:contentDescription="@string/cancel" />
    </LinearLayout>
</FrameLayout>