        <ImageButton android:layout_gravity="bottom" android:id="@id/pause_button" android:background="@drawable/circle" android:layout_width="@dimen/round_ui_big_button_size" android:layout_height="@dimen/round_ui_big_button_size" android:src="@drawable/quantum_ic_pause_vd_theme_24" android:contentDescription="@string/pause" android:backgroundTint="@color/round_ui_pause_button_color" />
