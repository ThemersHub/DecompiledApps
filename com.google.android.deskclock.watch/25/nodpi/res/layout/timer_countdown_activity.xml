<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/countdown_container" android:background="@color/wof_dark_blue" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto">
    <com.google.android.deskclock.roundview.RoundBarView android:id="@id/bar" android:layout_width="fill_parent" android:layout_height="fill_parent" />
