<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="setup_wizard_theme" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:strokeLineCap">@android:style/Theme.Material.Light.Dialog.MinWidth</item>
        <item name="setup_wizard_back_button">@drawable/btn_dir_prev_dark</item>
        <item name="setup_wizard_next_button">@drawable/btn_dir_next_dark</item>
        <item name="setup_wizard_start_button">@drawable/btn_start_dark</item>
        <item name="setup_wizard_divider_color">@color/setup_wizard_divider_color_dark</item>
        <item name="ic_backup">@drawable/ic_settings_backup</item>
        <item name="ic_communication">@drawable/ic_communication_dark</item>
        <item name="ic_emergency_dial">@drawable/ic_emergency_dial_dark</item>
        <item name="ic_location">@drawable/ic_settings_location</item>
    </style>
    <style name="setup_wizard_theme.light" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:strokeLineCap">@android:style/Theme.Material.Light.Dialog.MinWidth</item>
        <item name="setup_wizard_back_button">@drawable/btn_dir_prev_light</item>
        <item name="setup_wizard_next_button">@drawable/btn_dir_next_light</item>
        <item name="setup_wizard_start_button">@drawable/btn_start_light</item>
        <item name="setup_wizard_divider_color">@color/setup_wizard_divider_color_light</item>
        <item name="ic_backup">@drawable/ic_backup_light</item>
        <item name="ic_communication">@drawable/ic_communication_light</item>
        <item name="ic_emergency_dial">@drawable/ic_emergency_dial_light</item>
        <item name="ic_location">@drawable/ic_location_light</item>
    </style>
    <style name="setup_wizard_title">
        <item name="android:textSize">@dimen/setup_wizard_title_size</item>
        <item name="android:textColor">@color/setup_wizard_title_color</item>
        <item name="android:clickable">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:layout_marginLeft">@dimen/setup_wizard_title_margin_sides</item>
        <item name="android:layout_marginRight">@dimen/setup_wizard_title_margin_sides</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="setup_wizard_text">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorLink">?android:textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="setup_wizard_heading_text" parent="@style/setup_wizard_text">
        <item name="android:textSize">@dimen/setup_wizard_heading_text_size</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/setup_wizard_heading_margin_top</item>
    </style>
    <style name="setup_wizard_description_text" parent="@style/setup_wizard_text">
        <item name="android:textSize">@dimen/setup_wizard_description_text_size</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/setup_wizard_content_margin_sides</item>
        <item name="android:layout_marginTop">@dimen/setup_wizard_description_margin_top</item>
        <item name="android:layout_marginRight">@dimen/setup_wizard_content_margin_sides</item>
    </style>
    <style name="setup_wizard_body_text_secondary" parent="@android:attr/textAppearanceMedium">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textColorHighlight">@color/setup_wizard_highlight_color</item>
        <item name="android:textColorLink">@color/setup_wizard_link_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="setup_wizard_text_primary_small" parent="@android:attr/textAppearanceSmall">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHighlight">@color/setup_wizard_highlight_color</item>
        <item name="android:textColorLink">@color/setup_wizard_link_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="setup_wizard_checkbox">
        <item name="android:textAppearance">@style/setup_wizard_body_text_secondary</item>
        <item name="android:textSize">@dimen/setup_wizard_checkbox_text_size</item>
        <item name="android:layout_marginTop">@dimen/setup_wizard_checkbox_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/setup_wizard_checkbox_margin_bottom</item>
    </style>
    <style name="setup_wizard_checkbox_text">
        <item name="android:textAppearance">@style/setup_wizard_text_primary_small</item>
        <item name="android:textSize">@dimen/setup_wizard_checkbox_text_size</item>
        <item name="android:layout_marginTop">@dimen/setup_wizard_checkbox_text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/setup_wizard_checkbox_text_margin_bottom</item>
    </style>
    <style name="setup_wizard_button">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">20.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/setup_wizard_button_height</item>
        <item name="android:layout_marginTop">@dimen/setup_wizard_button_margin_top</item>
        <item name="android:minWidth">@dimen/setup_wizard_button_min_width</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="setup_wizard_single_button" parent="@style/setup_wizard_button">
        <item name="android:layout_width">@dimen/setup_wizard_button_min_width</item>
    </style>
    <style name="setup_wizard_arrow_button">
        <item name="android:layout_width">@dimen/setup_wizard_arrow_button_width</item>
        <item name="android:layout_height">@dimen/setup_wizard_arrow_button_height</item>
        <item name="android:minWidth">0.0dip</item>
    </style>
    <style name="setup_wizard_back_button" parent="@style/setup_wizard_arrow_button">
        <item name="android:background">?setup_wizard_back_button</item>
    </style>
    <style name="setup_wizard_next_button" parent="@style/setup_wizard_arrow_button">
        <item name="android:background">?setup_wizard_next_button</item>
    </style>
    <style name="setup_wizard_start_button" parent="@style/setup_wizard_arrow_button">
        <item name="android:background">?setup_wizard_start_button</item>
    </style>
    <style name="setup_wizard_top_divider">
        <item name="android:background">?setup_wizard_divider_color</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/setup_wizard_divider_height</item>
        <item name="android:layout_marginTop">@dimen/setup_wizard_divider_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/setup_wizard_divider_margin_bottom</item>
    </style>
    <style name="setup_wizard_services_heading_text" parent="@style/setup_wizard_heading_text">
        <item name="android:layout_marginTop">@dimen/setup_wizard_services_heading_margin_top</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="setup_wizard_services_footnote" parent="@style/setup_wizard_description_text">
        <item name="android:textSize">@dimen/setup_wizard_services_footnote_text_size</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:layout_marginTop">@dimen/setup_wizard_services_footnote_margin_top</item>
    </style>
    <style name="InvisibleNoTitle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoDisplay">false</item>
    </style>
    <style name="WelcomeTitle">
        <item name="android:textSize">40.0sp</item>
        <item name="android:textColor">@color/setup_wizard_title_color</item>
        <item name="android:clickable">false</item>
        <item name="android:longClickable">false</item>
    </style>
    <style name="LanguagePicker" parent="@android:style/Theme">
        <item name="android:layout_marginTop">@dimen/language_spinner_margin_top</item>
        <item name="android:layout_marginStart">-3.0dip</item>
    </style>
    <style name="StartButtonPositioning">
        <item name="android:layout_marginTop">@dimen/start_button_margin_top</item>
        <item name="android:layout_below">@id/language_picker</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="AndroidFramePositioning">
        <item name="android:layout_marginBottom">@dimen/welcome_screen_android_margin_bottom</item>
        <item name="android:layout_above">@id/welcome_emergency_dial</item>
        <item name="android:layout_below">@id/start</item>
        <item name="android:layout_marginStart">@dimen/welcome_screen_android_margin_left</item>
    </style>
    <style name="AndroidPositioning">
        <item name="android:layout_alignParentStart">true</item>
    </style>
    <style name="Spinner" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:gravity">start|center</item>
    </style>
    <style name="MissingSimSkipButton" parent="@style/setup_wizard_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="DatetimeContent" />
</resources>
