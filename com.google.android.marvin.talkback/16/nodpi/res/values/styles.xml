<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AccessibilityTutorialBodyTextPrimary" parent="@android:style/TextAppearance.Small" />
    <style name="AccessibilityTutorialTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/title_color</item>
    </style>
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="TalkBackSettings" parent="@android:style/Theme.Light" />
    <style name="TutorialActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@color/tutorial_action_bar_background</item>
    </style>
    <style name="TutorialActivityTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/TutorialActionBar</item>
    </style>
    <style name="AccessibilityTutorialDivider">
        <item name="android:gravity">fill_horizontal</item>
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2.0dip</item>
    </style>
    <style name="AccessibilityTutorialIcon">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">96.0dip</item>
        <item name="android:layout_height">96.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#b0000000</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="DimmingInstructionText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">48.0dip</item>
        <item name="android:layout_marginRight">48.0dip</item>
    </style>
    <style name="MaterialTextBody1">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textSize">14.0sp</item>
    </style>
    <style name="MaterialTextButton">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="MaterialTextSubHeading">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textSize">16.0sp</item>
    </style>
    <style name="MaterialTextTitle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">20.0sp</item>
    </style>
    <style name="Transparent" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="TutorialDescription" parent="@style/MaterialTextBody1">
        <item name="android:background">@color/tutorial_header_background</item>
        <item name="android:paddingLeft">@dimen/tutorial_content_horizontal_offset</item>
        <item name="android:paddingTop">12.0dip</item>
        <item name="android:paddingRight">@dimen/tutorial_content_horizontal_offset</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:minHeight">@dimen/tutorial_header_min_height</item>
    </style>
</resources>
