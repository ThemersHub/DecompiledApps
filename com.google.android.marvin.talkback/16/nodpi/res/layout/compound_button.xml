    <CheckBox android:id="@id/check_box" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <CheckBox android:id="@id/check_box_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/instrumentation_test_text" />
    <CheckedTextView android:id="@id/checked_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/instrumentation_test_text" />
    <Switch android:id="@id/switch_basic" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <Switch android:id="@id/switch_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/instrumentation_test_text" />
