<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/setting_correction"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.apps.inputmethod.libs.framework.preference.widget.PreferenceCategoryHeader android:title="@string/setting_suggestions_category_title" android:key="@string/setting_suggestions_category_key">
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_show_suggestion_title" android:key="@string/pref_key_latin_show_suggestion" android:summary="@string/setting_show_suggestion_summary" />
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_next_word_prediction_title" android:key="@string/pref_key_next_word_prediction" android:summary="@string/setting_next_word_prediction_summary" android:dependency="@string/pref_key_latin_show_suggestion" />
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_block_offensive_words_title" android:key="@string/pref_key_block_offensive_words" android:summary="@string/setting_block_offensive_words_summary" />
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_show_emoji_suggestion_title" android:key="@string/pref_key_enable_emoji_suggestion" />
        <com.google.android.apps.inputmethod.libs.framework.preference.widget.AutoSyncedCheckBoxPreference android:persistent="true" android:title="@string/setting_import_user_contacts_title" android:key="@string/pref_key_import_user_contacts" android:summary="@string/setting_import_user_contacts_summary" />
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_latin_personalization_title" android:key="@string/pref_key_latin_personalization" android:summary="@string/setting_latin_personalization_summary" />
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_multi_language_suggestions_title" android:key="@string/pref_key_auto_language_switching" android:summary="@string/setting_multi_language_suggestions_summary" android:defaultValue="true" />
    </com.google.android.apps.inputmethod.libs.framework.preference.widget.PreferenceCategoryHeader>
    <com.google.android.apps.inputmethod.libs.framework.preference.widget.PreferenceCategoryHeader android:title="@string/setting_corrections_category_title" android:key="@string/setting_corrections_category_key">
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_auto_correction_title" android:key="@string/pref_key_latin_auto_correction" android:summary="@string/setting_auto_correction_summary" />
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_auto_capitalization_title" android:key="@string/pref_key_auto_capitalization" android:summary="@string/setting_auto_capitalization_summary" />
        <CheckBoxPreference android:persistent="true" android:title="@string/setting_double_space_period_title" android:key="@string/pref_key_enable_double_space_period" android:summary="@string/setting_double_space_period_summary" />
    </com.google.android.apps.inputmethod.libs.framework.preference.widget.PreferenceCategoryHeader>
</PreferenceScreen>