        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="2.0dip" />
                    <stroke android:width="1.0dip" android:color="@color/quantum_white_100" />
                    <solid android:color="@color/transparent_follow_button_selected_color" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="2.0dip" />
