<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@id/notification_feedback_container" android:layout_width="fill_parent" android:layout_height="wrap_content" android:fillViewport="false"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:theme="@style/Theme.Gsa.Dialog" android:orientation="vertical" android:padding="@dimen/nf_large_padding" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/notification_feedback_title" android:paddingBottom="@dimen/nf_large_padding" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/nf_title_text" />
            <TextView android:id="@id/notification_feedback_question" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/nf_text" />
            <RadioGroup android:id="@id/notification_feedback_rating_group" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <RadioButton android:id="@id/notification_feedback_rating_1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/nf_medium_padding" android:drawablePadding="@dimen/nf_small_padding" style="@style/nf_text" />
                <RadioButton android:id="@id/notification_feedback_rating_2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/nf_medium_padding" android:drawablePadding="@dimen/nf_small_padding" style="@style/nf_text" />
                <RadioButton android:id="@id/notification_feedback_rating_3" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/nf_medium_padding" android:drawablePadding="@dimen/nf_small_padding" style="@style/nf_text" />
                <RadioButton android:id="@id/notification_feedback_rating_4" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/nf_medium_padding" android:drawablePadding="@dimen/nf_small_padding" style="@style/nf_text" />
            </RadioGroup>
            <TextView android:id="@id/notification_feedback_footer" android:paddingTop="@dimen/nf_large_padding" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/nf_small_text" />
        </LinearLayout>
        <LinearLayout android:gravity="end" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/nf_tiny_padding">
            <TextView android:enabled="true" android:gravity="center" android:id="@id/notification_feedback_cancel_button" android:clickable="true" android:layout_width="wrap_content" android:layout_height="@dimen/nf_button_height" android:text="@string/common_no" style="@style/nf_button" />
            <TextView android:enabled="false" android:gravity="center" android:id="@id/notification_feedback_submit_button" android:clickable="true" android:layout_width="wrap_content" android:layout_height="@dimen/nf_button_height" android:text="@string/common_yes" style="@style/nf_button" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>