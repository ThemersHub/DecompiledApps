<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/chatui_bubble_radius_v2" android:topRightRadius="@dimen/chatui_bubble_radius_v2" android:bottomLeftRadius="@dimen/chatui_bubble_radius_v2" android:bottomRightRadius="@dimen/chatui_bubble_radius_v2" />
            <solid android:color="@color/chatui_suggestion_background" />
            <padding android:left="@dimen/chatui_bubble_side_padding" android:right="@dimen/chatui_bubble_side_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/chatui_bubble_radius_v2" android:topRightRadius="@dimen/chatui_bubble_radius_v2" android:bottomLeftRadius="@dimen/chatui_bubble_radius_v2" android:bottomRightRadius="@dimen/chatui_bubble_radius_v2" />
            <solid android:color="@color/chatui_solid_background_fill_v2" />
            <stroke android:width="@dimen/chatui_bubble_stroke_width" android:color="@color/chatui_suggestion_outline_v2" />
            <padding android:left="@dimen/chatui_bubble_side_padding" android:right="@dimen/chatui_bubble_side_padding" />
        </shape>
    </item>
</selector>