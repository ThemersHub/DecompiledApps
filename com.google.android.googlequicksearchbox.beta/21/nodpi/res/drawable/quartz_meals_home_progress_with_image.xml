<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/quartz_meals_home_progress_with_image" />
            <corners android:radius="@dimen/quartz_4sdp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/quartz_red_800" />
                <corners android:radius="@dimen/quartz_4sdp" />
            </shape>
        </clip>
    </item>
</layer-list>