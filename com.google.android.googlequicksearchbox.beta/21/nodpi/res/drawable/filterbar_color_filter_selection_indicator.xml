<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <size android:height="@dimen/color_filter_height" android:width="@dimen/color_filter_width" />
                    <corners android:radius="@dimen/color_filter_corner_radius" />
                    <stroke android:width="3.0dip" android:color="@android:color/white" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <size android:height="@dimen/color_filter_height" android:width="@dimen/color_filter_width" />
                    <corners android:radius="@dimen/color_filter_corner_radius" />
                    <stroke android:width="2.0dip" android:color="@color/filterbar_selection_color" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>