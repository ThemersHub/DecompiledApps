<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/home_automation_button_background_radius" />
            <stroke android:width="@dimen/home_automation_button_stroke_width" android:color="@color/home_automation_light_grey_color" />
        </shape>
    </item>
    <item>
        <ripple android:color="@color/home_automation_light_grey_color">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/home_automation_button_background_radius" />
                    <solid android:color="@color/quantum_white_100" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>