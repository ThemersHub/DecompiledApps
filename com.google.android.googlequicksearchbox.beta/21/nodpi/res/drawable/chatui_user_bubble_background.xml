<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/chatui_bubble_radius_v2" android:topRightRadius="@dimen/chatui_bubble_radius_v2" android:bottomLeftRadius="@dimen/chatui_bubble_radius_v2" android:bottomRightRadius="@dimen/chatui_bubble_radius_v2" />
            <solid android:color="@color/chatui_selection_color" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/chatui_bubble_radius_v2" android:topRightRadius="@dimen/chatui_bubble_radius_v2" android:bottomLeftRadius="@dimen/chatui_bubble_radius_v2" android:bottomRightRadius="@dimen/chatui_bubble_radius_v2" />
            <stroke android:width="@dimen/chatui_focus_stroke_width_v2" android:color="@color/chatui_focus_border" />
            <solid android:color="@color/chatui_user_bubble_fill_v2" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/chatui_bubble_radius_v2" android:topRightRadius="@dimen/chatui_bubble_radius_v2" android:bottomLeftRadius="@dimen/chatui_bubble_radius_v2" android:bottomRightRadius="@dimen/chatui_bubble_radius_v2" />
            <solid android:color="@color/chatui_user_bubble_fill_v2" />
        </shape>
    </item>
</selector>