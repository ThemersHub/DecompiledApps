<?xml version="1.0" encoding="utf-8"?>
<preference-headers
  xmlns:android="http://schemas.android.com/apk/res/android">
    <header android:id="@id/launcher_section" android:title="@string/homescreen_settings_header_category" />
    <header android:id="@id/launcher_settings_display_feed" android:title="@string/homescreen_settings_display_feed">
        <extra android:name="TYPE_SWITCH" android:value="yes" />
        <extra android:name="LAUNCHER_PREF_KEY" android:value="pref_display_feed" />
        <extra android:name="ENABLE_BY_DEFAULT" android:value="yes" />
    </header>
    <header android:id="@id/launcher_settings_show_predictions" android:title="@string/homescreen_settings_show_predictions">
        <extra android:name="TYPE_SWITCH" android:value="yes" />
        <extra android:name="LAUNCHER_PREF_KEY" android:value="pref_show_predictions" />
        <extra android:name="ENABLE_BY_DEFAULT" android:value="yes" />
    </header>
    <header android:id="@id/launcher_settings_allow_rotation" android:title="@string/allow_rotation_title">
        <extra android:name="TYPE_SWITCH" android:value="yes" />
        <extra android:name="LAUNCHER_PREF_KEY" android:value="pref_allowRotation" />
    </header>
</preference-headers>