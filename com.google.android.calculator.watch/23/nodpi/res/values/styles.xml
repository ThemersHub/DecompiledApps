<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalculatorTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowBackground">@color/num_pad_background_color</item>
    </style>
    <style name="ConfirmationActivity" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
    </style>
    <style name="NumButtonStyle" parent="@style/PadButtonStyle">
        <item name="android:textSize">20.0sp</item>
    </style>
    <style name="NumPadThemeOverlay">
        <item name="android:textColorPrimary">@color/num_button_text_color</item>
        <item name="android:buttonStyle">@style/NumButtonStyle</item>
        <item name="android:colorControlHighlight">@color/num_button_ripple_color</item>
    </style>
    <style name="OpButtonStyle" parent="@style/PadButtonStyle">
        <item name="android:textSize">24.0sp</item>
    </style>
    <style name="OpPadThemeOverlay">
        <item name="android:textColorPrimary">@color/op_button_text_color</item>
        <item name="android:buttonStyle">@style/OpButtonStyle</item>
        <item name="android:colorControlHighlight">@color/op_button_ripple_color</item>
    </style>
    <style name="PadButtonStyle" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="SinglePageNavDrawerIconStyle">
        <item name="android:padding">@dimen/nav_drawer_single_page_icon_padding</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_width">@dimen/nav_drawer_single_page_icon_size</item>
        <item name="android:layout_height">@dimen/nav_drawer_single_page_icon_size</item>
        <item name="circle_color">#33ffffff</item>
        <item name="circle_radius">@dimen/nav_drawer_single_page_circle_radius</item>
    </style>
    <style name="SinglePageNavDrawerTextStyle">
        <item name="android:textSize">@dimen/nav_drawer_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="layout_marginTopPercent">@fraction/nav_drawer_text_margin</item>
        <item name="layout_marginStartPercent">@fraction/nav_drawer_text_margin</item>
        <item name="layout_marginEndPercent">@fraction/nav_drawer_text_margin</item>
    </style>
</resources>
