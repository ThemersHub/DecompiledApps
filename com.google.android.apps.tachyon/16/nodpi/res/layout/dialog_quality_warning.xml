<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/TachyonDialogMainContainer"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/TachyonDialogTextSection">
        <TextView android:id="@id/title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/quality_warning_dialog_title" android:layout_alignParentTop="true" style="@style/TachyonDialogTitle" />
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/quality_warning_dialog_body" android:layout_below="@id/title" style="@style/TachyonDialogMessageBody" />
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" style="@style/TachyonDialogOptionButtonContainer">
        <Button android:id="@id/ok_button" android:text="@string/ok" style="@style/TachyonStyleDialogOptionButtonHorizontal" />
    </LinearLayout>
</LinearLayout>