<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityTheme" parent="@style/TachyonDefaultTheme">
        <item name="android:windowBackground">@color/blue_grey_900</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:popupMenuStyle">@style/MainActivityPopupMenu</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="TachyonSettingsTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:listDivider">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorAccent">@color/google_blue_500</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>
</resources>
