<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <padding android:bottom="5.0dip" />
        </shape>
    </item>
    <item android:left="-2.0dip" android:top="-2.0dip" android:right="-2.0dip" android:bottom="-3.0dip">
        <selector>
            <item android:state_focused="true">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="@dimen/recordview_edittext_underline_focused_width" android:color="@color/m_app_primary" />
                </shape>
            </item>
            <item app:state_edit_text_focused="false">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="@dimen/recordview_edittext_underline_unfocused_width" android:color="@android:color/black" />
                </shape>
            </item>
            <item app:state_edit_text_focused="true">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="@dimen/recordview_edittext_underline_focused_width" android:color="@color/m_app_primary" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>