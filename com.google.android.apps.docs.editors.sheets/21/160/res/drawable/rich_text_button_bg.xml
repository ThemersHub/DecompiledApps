<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/button_ripple_background"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/rich_text_button_bg_pressed" />
                </shape>
            </item>
            <item android:state_checked="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/rich_text_button_bg_pressed" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/formula_editor_shortcut_bar_item_bg" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>