<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:topLeftRadius="@dimen/card_inner_content_padding" android:topRightRadius="@dimen/card_inner_content_padding" />
            <padding android:left="@dimen/card_inner_content_2x_padding" android:top="@dimen/card_inner_content_three_halves_padding" android:right="@dimen/card_inner_content_2x_padding" android:bottom="@dimen/card_inner_content_padding" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_ripple_color_darken" />
            <corners android:topLeftRadius="@dimen/card_inner_content_padding" android:topRightRadius="@dimen/card_inner_content_padding" />
            <padding android:left="@dimen/card_inner_content_2x_padding" android:top="@dimen/card_inner_content_three_halves_padding" android:right="@dimen/card_inner_content_2x_padding" android:bottom="@dimen/card_inner_content_padding" />
        </shape>
    </item>
</selector>