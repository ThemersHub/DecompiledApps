<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:paddingTop="@dimen/appinvite_section_spacing" android:paddingBottom="@dimen/appinvite_section_spacing" android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/appinvite_margin" android:paddingEnd="@dimen/appinvite_margin">
        <FrameLayout android:id="@id/thumbnail_frame" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentEnd="true">
            <ImageView android:id="@id/image_thumbnail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitCenter" android:adjustViewBounds="true" android:maxWidth="@dimen/appinvite_image_preview" android:maxHeight="@dimen/appinvite_image_preview" android:contentDescription="@null" />
            <TextView android:textSize="@dimen/appinvite_text_size_medium" android:textStyle="italic" android:textColor="@color/material_grey_white_1000" android:gravity="center" android:layout_gravity="bottom" android:background="@color/appinvite_light_black" android:padding="@dimen/appinvite_image_preview_label_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/appinvite_email_only" />
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:id="@id/message_frame" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignTop="@id/thumbnail_frame" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/appinvite_margin" android:layout_toStartOf="@id/thumbnail_frame" android:layout_alignParentStart="true">
            <TextView android:textSize="@dimen/appinvite_text_size_medium" android:textColor="@color/appinvite_medium_black" android:id="@id/message_header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/appinvite_message_header" style="@style/appInviteTextStyleRegular" />
            <EditText android:textSize="@dimen/appinvite_text_size_large" android:textColor="@color/appinvite_dark_black" android:textColorHint="@color/appinvite_medium_black" android:id="@id/message" android:background="@null" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/appinvite_message_hint" android:inputType="textAutoCorrect|textCapSentences|textMultiLine|textShortMessage" android:imeOptions="actionDone" style="@style/appInviteTextStyleRegular" />
            <View android:id="@id/message_separator" android:background="@color/appinvite_medium_black" android:layout_width="fill_parent" android:layout_height="@dimen/appinvite_separator" android:layout_marginTop="@dimen/appinvite_message_section_space" />
            <TextView android:textSize="@dimen/appinvite_text_size_small" android:textColor="@color/appinvite_medium_black" android:gravity="end" android:id="@id/message_limit" android:focusable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/appinvite_message_section_space" style="@style/appInviteTextStyleRegular" />
        </LinearLayout>
        <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/message_frame" android:layout_alignParentStart="true">
            <TextView android:textSize="@dimen/appinvite_text_size_large" android:textColor="@color/material_light_blue_700" android:gravity="center_vertical" android:id="@id/preview_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="36.0dip" android:text="@string/appinvite_email_preview" style="@style/appInviteSelectableTextStyleRegular" />
        </FrameLayout>
    </RelativeLayout>
    <View android:id="@id/separator" android:background="@color/appinvite_separator" android:layout_width="fill_parent" android:layout_height="@dimen/appinvite_separator" />
</LinearLayout>