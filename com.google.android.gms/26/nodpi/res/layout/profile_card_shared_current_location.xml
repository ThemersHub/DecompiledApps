<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.smart_profile.card.CardView android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/Theme.Profile.CardStyle"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <include layout="@layout/profile_card_title_view_simple" />
        <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@id/location_map_image" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scaleType="fitCenter" android:adjustViewBounds="true" />
            <LinearLayout android:orientation="horizontal" android:id="@id/selectable_mask" android:layout_width="fill_parent" android:layout_height="fill_parent" android:contentDescription="@string/real_time_location_map_content_description" style="@style/common.Widget.SelectableItem" />
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:id="@id/entry_container" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>
</com.google.android.gms.smart_profile.card.CardView>