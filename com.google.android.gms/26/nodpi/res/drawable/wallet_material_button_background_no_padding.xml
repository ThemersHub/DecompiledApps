<?xml version="1.0" encoding="utf-8"?>
<inset
  xmlns:android="http://schemas.android.com/apk/res/android">
    <selector>
        <item android:state_enabled="false">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/wallet_radius_button" />
                <solid android:color="@color/wallet_button_disabled" />
                <padding android:left="@dimen/wallet_padding_button_horizontal" android:top="@dimen/wallet_padding_button_vertical" android:right="@dimen/wallet_padding_button_horizontal" android:bottom="@dimen/wallet_padding_button_vertical" />
            </shape>
        </item>
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/wallet_radius_button" />
                <solid android:color="@color/wallet_button_pressed" />
                <padding android:left="@dimen/wallet_padding_button_horizontal" android:top="@dimen/wallet_padding_button_vertical" android:right="@dimen/wallet_padding_button_horizontal" android:bottom="@dimen/wallet_padding_button_vertical" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/wallet_radius_button" />
                <solid android:color="@color/wallet_material_button_primary" />
                <padding android:left="@dimen/wallet_padding_button_horizontal" android:top="@dimen/wallet_padding_button_vertical" android:right="@dimen/wallet_padding_button_horizontal" android:bottom="@dimen/wallet_padding_button_vertical" />
            </shape>
        </item>
    </selector>
</inset>