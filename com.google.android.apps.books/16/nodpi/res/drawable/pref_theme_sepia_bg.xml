<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@drawable/pref_theme_sepia_pressed_bg" />
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/books_sepia" />
            <stroke android:width="@dimen/pref_theme_button_stroke" android:color="@color/pref_sepia_theme_button_stroke" />
            <corners android:radius="@dimen/pref_btn_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/pref_button_disabled_light" />
            <stroke android:width="@dimen/pref_theme_button_stroke" android:color="@color/pref_sepia_theme_button_stroke" />
            <corners android:radius="@dimen/pref_btn_radius" />
        </shape>
    </item>
</selector>