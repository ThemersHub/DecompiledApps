<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/control_selected_color_dark" />
                    <stroke android:width="@dimen/divider_size" android:color="@color/control_highlight_color_dark" />
                </shape>
            </item>
        </selector>
    </item>
    <item android:drawable="@drawable/item_background_dark" />
</layer-list>