<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@id/non_selected_layout" style="@style/detailed_non_selected_option_layout">
        <ImageView android:id="@id/non_selected_option_icon" style="@style/detailed_options_bar_icon" />
        <TextView android:id="@id/non_selected_option_label" style="@style/non_selected_option_desc" />
    </LinearLayout>
    <LinearLayout android:id="@id/selected_layout" style="@style/detailed_selected_option_layout">
        <ImageView android:id="@id/selected_option_icon" style="@style/detailed_options_bar_icon" />
        <TextView android:id="@id/selected_option_label" style="@style/selected_option_desc" />
    </LinearLayout>
</FrameLayout>