<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" style="@style/DetailClickable"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@id/IconLayout" android:layout_width="@dimen/detail_icon_view_width" android:layout_height="fill_parent">
            <ImageView android:id="@id/Icon" android:layout_width="@dimen/detail_icon_size" android:layout_height="@dimen/detail_icon_size" android:layout_centerInParent="true" android:contentDescription="@string/button_icon_description" />
        </RelativeLayout>
        <TextView android:ellipsize="end" android:id="@id/DetailButtonText" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Text_Header" />
        <Space android:layout_width="@dimen/detail_item_padding" android:layout_height="fill_parent" />
    </LinearLayout>
</LinearLayout>