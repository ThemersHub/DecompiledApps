<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SuwCardTitle" parent="@style/SuwBaseCardTitle">
        <item name="android:maxLines">6</item>
    </style>
    <style name="WelcomeTour" />
    <style name="WelcomeTour.Container" parent="@style/WelcomeTour">
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="WelcomeTour.ContentArea" parent="@style/WelcomeTour">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/welcome_tour_content_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/welcome_tour_content_padding_horizontal</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">55.0</item>
    </style>
    <style name="WelcomeTour.ImageArea" parent="@style/WelcomeTour">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">45.0</item>
    </style>
    <style name="WelcomeTour.ImageContainer" parent="@style/WelcomeTour">
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="snooze_menuOptionDetail">
        <item name="android:textSize">@dimen/snooze_grid_menu_option_detail_text_size</item>
        <item name="android:textColor">@color/snooze_faint_text</item>
        <item name="android:layout_marginTop">@dimen/snooze_grid_menu_option_detail_margin_top</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="snooze_menuOptionTile">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="snooze_menuOptionTitle">
        <item name="android:textSize">@dimen/snooze_grid_menu_option_title_text_size</item>
        <item name="android:textColor">@color/snooze_dark_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
