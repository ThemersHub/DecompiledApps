<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.AppCompat" parent="@style/Base.V22.Theme.AppCompat" />
    <style name="Base.Theme.AppCompat.Light" parent="@style/Base.V22.Theme.AppCompat.Light" />
    <style name="ColoredNavBarGeneralTheme" parent="@style/BaseGeneralTheme">
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarDividerColor">@color/navigation_bar_divider_color</item>
    </style>
    <style name="ColoredNavBarMailActivityTheme" parent="@style/BaseMailActivityTheme">
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarDividerColor">@color/navigation_bar_divider_color</item>
    </style>
    <style name="ComposeTheme" parent="@style/ColoredNavBarGeneralTheme">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:dropDownListViewStyle">@style/ComposeDropdownListViewStyle</item>
        <item name="android:colorBackgroundCacheHint">@android:color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarDividerColor">@color/navigation_bar_divider_color</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>
    <style name="SuwAlertDialogTheme.Light" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert" />
    <style name="SuwGlifButton.Primary" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/SuwGlifButton.Primary</item>
        <item name="android:buttonStyle">@style/SuwGlifButton.Primary</item>
        <item name="android:paddingLeft">@dimen/suw_glif_button_padding</item>
        <item name="android:paddingRight">@dimen/suw_glif_button_padding</item>
        <item name="android:textAllCaps">?suwButtonAllCaps</item>
        <item name="android:fontFamily">?suwButtonFontFamily</item>
        <item name="android:buttonCornerRadius">?suwButtonCornerRadius</item>
        <item name="textAllCaps">?suwButtonAllCaps</item>
        <item name="buttonStyle">@style/SuwGlifButton.Primary</item>
    </style>
    <style name="SuwThemeGlifV2.Light" parent="@style/SuwThemeGlif.Light">
        <item name="android:colorBackground">@color/suw_glif_background_color_light</item>
        <item name="android:editTextStyle">@style/SuwEditText</item>
        <item name="android:alertDialogTheme">@style/SuwAlertDialogTheme.Light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="suwDividerInsetEnd">?suwMarginSides</item>
        <item name="suwDividerInsetStart">?suwMarginSides</item>
        <item name="suwDividerInsetStartNoIcon">?suwMarginSides</item>
        <item name="suwEditTextBackgroundColor">@color/suw_glif_edit_text_bg_light_color</item>
        <item name="suwGlifHeaderGravity">center_horizontal</item>
        <item name="suwScrollIndicators">bottom|top</item>
        <item name="suwBackgroundPatterned">false</item>
        <item name="suwBackgroundBaseColor">?android:colorBackground</item>
    </style>
    <style name="Base.V22.Theme.AppCompat" parent="@style/Base.V21.Theme.AppCompat">
        <item name="actionModeShareDrawable">?android:actionModeShareDrawable</item>
        <item name="editTextBackground">?android:editTextBackground</item>
    </style>
    <style name="Base.V22.Theme.AppCompat.Light" parent="@style/Base.V21.Theme.AppCompat.Light">
        <item name="actionModeShareDrawable">?android:actionModeShareDrawable</item>
        <item name="editTextBackground">?android:editTextBackground</item>
    </style>
</resources>
