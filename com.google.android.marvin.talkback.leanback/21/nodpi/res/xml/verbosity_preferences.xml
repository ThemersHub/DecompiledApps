        <SwitchPreference android:title="@string/title_pref_speak_element_ids" android:key="@string/pref_speak_element_ids_key" android:defaultValue="@bool/pref_speak_element_ids_default" android:summaryOn="@string/summaryOn_pref_speak_element_ids" android:summaryOff="@string/summaryOff_pref_speak_element_ids" />
