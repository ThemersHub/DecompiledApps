<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <shape android:shape="rectangle"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <corners android:radius="@dimen/bt_item_list_item_corner_radius" />
        <solid android:color="@color/bt_megalist_item_background_selected" />
    </shape>
    <item android:top="@dimen/bt_item_list_focus_stroke_offset" android:right="@dimen/bt_item_list_focus_stroke_offset" android:bottom="@dimen/bt_item_list_focus_stroke_offset">
        <shape>
            <solid android:color="@color/bt_megalist_item_background_selected" />
            <stroke android:width="@dimen/bt_item_list_focus_stroke_width" android:color="@color/bt_blue" />
        </shape>
    </item>
</layer-list>