<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@id/onboarding_message" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/onboarding_text_1" android:paddingLeft="@dimen/bt_item_list_padding" android:paddingTop="@dimen/bt_item_list_padding" android:paddingRight="@dimen/bt_item_list_padding" style="@style/bt_OnboardingMessage" />
    <TextView android:id="@id/onboarding_text_2" android:paddingLeft="@dimen/bt_item_list_padding" android:paddingTop="@dimen/bt_item_list_onboarding_padding" android:paddingRight="@dimen/bt_item_list_padding" android:visibility="gone" style="@style/bt_OnboardingMessage" />
    <TextView android:textColorLink="@color/bt_white_text" android:id="@id/onboarding_text_3" android:paddingLeft="@dimen/bt_item_list_padding" android:paddingTop="@dimen/bt_item_list_onboarding_padding" android:paddingRight="@dimen/bt_item_list_padding" style="@style/bt_OnboardingMessage" />
    <LinearLayout android:gravity="end" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/bt_white_button_text_transparent" android:id="@id/turn_off" android:text="@string/bt_onboarding_disable_bundling_button" android:alpha="0.6" style="@style/bt_OnboardingMessageActionButton" />
        <TextView android:textColor="@color/bt_white_button_text_transparent" android:id="@id/turn_on" android:text="@string/bt_onboarding_enable_bundling_button" android:alpha="0.6" style="@style/bt_OnboardingMessageActionButton" />
        <TextView android:textColor="@color/bt_white_button_text" android:id="@id/dismiss" android:clickable="true" android:text="@string/bt_onboarding_ok_button" style="@style/bt_OnboardingMessageActionButton" />
    </LinearLayout>
</LinearLayout>