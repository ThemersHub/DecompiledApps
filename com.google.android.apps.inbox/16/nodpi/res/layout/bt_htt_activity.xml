<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="@color/bt_google_blue" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <ProgressBar android:id="@id/progress_bar" android:layout_width="fill_parent" android:layout_height="@dimen/bt_htt_progress_bar_height" android:indeterminate="false" android:progressDrawable="@drawable/bt_htt_progress_bar" style="@style/Widget.AppCompat.ProgressBar.Horizontal" />
        <RelativeLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/bt_htt_top_margin">
            <ImageView android:id="@id/close_button" android:layout_width="@dimen/bt_htt_close_button_size" android:layout_height="@dimen/bt_htt_close_button_size" android:src="@drawable/ic_close_wht_24dp" android:contentDescription="@string/bt_cd_navigate_up_to_close" />
            <TextView android:textSize="@dimen/bt_htt_action_text_size" android:textColor="@color/bt_white_text" android:id="@id/done_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bt_action_done" />
        </RelativeLayout>
        <TextView android:textSize="@dimen/bt_htt_title_size" android:textColor="@color/bt_white_text" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@id/title" android:paddingTop="@dimen/bt_htt_general_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <TextView android:textSize="@dimen/bt_htt_subtitle_size" android:textColor="@color/bt_white_text" android:gravity="center_horizontal" android:id="@id/subtitle" android:padding="@dimen/bt_htt_general_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <com.google.android.apps.bigtop.highlights.HighlightsTrainingViewPager android:id="@id/view_pager" android:layout_width="fill_parent" android:layout_height="fill_parent" android:importantForAccessibility="no" />
    </LinearLayout>
    <ProgressBar android:layout_gravity="center" android:id="@id/content_loading_spinner" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" />
</FrameLayout>