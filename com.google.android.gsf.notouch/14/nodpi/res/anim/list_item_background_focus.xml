<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <set>
            <objectAnimator android:duration="0" android:valueTo="1.0" android:valueType="floatType" android:propertyName="alpha" />
        </set>
    </item>
    <item android:state_focused="false">
        <set>
            <objectAnimator android:duration="0" android:valueTo="0.0" android:valueType="floatType" android:propertyName="alpha" />
        </set>
    </item>
</selector>