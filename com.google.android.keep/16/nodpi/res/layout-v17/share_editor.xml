                </com.google.android.keep.share.MaxHeightScrollView>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/share_bottom_area_height">
                    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/label_summary_image_container" android:visibility="invisible" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0">
