                        <FrameLayout android:id="@id/label_summary_container" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_weight="1.0">
                            <com.google.android.keep.share.LabelSummaryLayout android:gravity="center_vertical" android:id="@id/label_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                        </FrameLayout>
                    </LinearLayout>
                    <Button android:textColor="@color/quantum_googblue" android:gravity="center" android:id="@id/save_button" android:layout_width="wrap_content" android:layout_height="fill_parent" android:minWidth="@dimen/share_button_min_width" android:text="@string/save" style="@style/Widget.AppCompat.Button.Borderless" />
                </LinearLayout>
                <View android:id="@id/account_selector_space" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="@dimen/share_account_height" />
            </LinearLayout>
            <FrameLayout android:layout_gravity="bottom" android:id="@id/account_selector_container" android:background="@color/share_handler_account_selector" android:layout_width="fill_parent" android:layout_height="@dimen/share_account_height">
                <android.support.v7.widget.RecyclerView android:id="@id/account_list" android:visibility="invisible" android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" />
                <include android:id="@id/account_selector" layout="@layout/share_handler_account" />
            </FrameLayout>
            <View android:id="@id/touch_interceptor" android:visibility="gone" android:clickable="true" android:layout_width="fill_parent" android:layout_height="0.0dip" />
        </FrameLayout>
    </LinearLayout>
    <include layout="@layout/share_label_selector" />
</FrameLayout>