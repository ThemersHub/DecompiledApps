<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="QebFloatingContainerStyle" parent="@style/QebContainerStyle">
        <item name="android:background">@drawable/qeb_shadow</item>
        <item name="android:layout_width">@dimen/qeb_tablet_width</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="RecipientEditTextView" parent="@style/RecipientEditTextViewBase">
        <item name="android:imeOptions">actionNext</item>
    </style>
    <style name="SearchBarQueryFrame">
        <item name="android:layout_toRightOf">@id/search_actionbar_back_button</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="SnackbarContainerStyle">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="ToastFragmentStyle">
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Widget.Design.TabLayout" parent="@style/Base.Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">center</item>
    </style>
</resources>
