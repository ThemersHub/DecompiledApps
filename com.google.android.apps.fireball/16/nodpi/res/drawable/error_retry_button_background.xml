<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size android:height="@dimen/error_retry_button_size" android:width="@dimen/error_retry_button_size" />
            <solid android:color="@color/error_retry_button_background_item_pressed" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="oval">
            <size android:height="@dimen/error_retry_button_size" android:width="@dimen/error_retry_button_size" />
            <solid android:color="@color/error_retry_button_background_item_activated" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <size android:height="@dimen/error_retry_button_size" android:width="@dimen/error_retry_button_size" />
            <solid android:color="@color/error_retry_button_background_item_transparent" />
        </shape>
    </item>
</selector>