<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/background_item_pressed" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="oval">
            <solid android:color="@color/background_item_activated" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/annotation_button_bg" />
        </shape>
    </item>
</selector>