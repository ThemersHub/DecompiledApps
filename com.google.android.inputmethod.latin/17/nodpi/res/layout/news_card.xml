<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/CommonCardView"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:divider="@color/quantum_grey500" android:showDividers="middle" style="@style/CardHostView">
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0">
            <ImageView android:id="@id/card_news_profile" android:layout_alignParentRight="true" style="@style/ProfileImage" />
            <TextView android:ellipsize="end" android:id="@id/card_news_title" android:maxLines="@integer/long_string_max_lines_responsive" android:layout_toLeftOf="@id/card_news_profile" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" style="@style/TextLine.Primary" />
            <TextView android:textColor="@color/green_text" android:id="@id/card_news_source" android:layout_marginTop="4.0dip" android:maxLines="@integer/single_line_fixed" android:layout_toLeftOf="@id/card_news_profile" android:layout_below="@id/card_news_title" style="@style/TextLine.Secondary" />
            <TextView android:id="@id/card_news_age" android:layout_marginTop="4.0dip" android:layout_toLeftOf="@id/card_news_profile" android:layout_below="@id/card_news_source" style="@style/TextLine.Secondary" />
        </RelativeLayout>
        <include layout="@layout/action_view" />
    </LinearLayout>
</android.support.v7.widget.CardView>