<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeSelector" parent="@android:style/Theme.Material.Light" />
    <style name="Base.TextAppearance.AppCompat" parent="@android:style/TextAppearance.Material" />
    <style name="BaseTheme" parent="@android:style/Theme.DeviceDefault.InputMethod" />
    <style name="MaterialPopupContent" parent="@style/MaterialPopupView">
        <item name="android:tag">.popup</item>
        <item name="android:background">?BgPopupBackground</item>
        <item name="android:paddingLeft">2.0dip</item>
        <item name="android:paddingRight">2.0dip</item>
        <item name="android:layout_margin">@dimen/material_popup_bubble_margin</item>
        <item name="android:elevation">@dimen/material_popup_bubble_elevation</item>
    </style>
    <style name="MaterialRectangularPopupContentOuter">
        <item name="android:tag">.popup.for-popup-content-outer</item>
        <item name="android:background">?BgPopupRectangularInset</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/material_popup_bubble_margin</item>
        <item name="android:elevation">@dimen/material_popup_bubble_elevation</item>
    </style>
    <style name="MaterialRectangularPopupHandle">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:tag">.popup</item>
        <item name="android:background">?BgPopupBackground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/material_popup_bubble_width</item>
        <item name="android:elevation">@dimen/material_popup_bubble_elevation</item>
    </style>
    <style name="SettingsButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_settings_button_inset</item>
    </style>
    <style name="SettingsButtonBorderlessColored" parent="@android:style/Widget.Material.Button.Borderless.Colored" />
    <style name="SettingsTheme" parent="@android:style/Theme.DeviceDefault.Settings" />
    <style name="SettingsTheme.Transparent" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    <style name="ThemeBuilderDeleteButton">
        <item name="android:layout_gravity">end|center|top</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:padding">12.0dip</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/quantum_ic_delete_white_24</item>
        <item name="android:contentDescription">@string/theme_builder_delete_button_text</item>
        <item name="android:translationZ">1.0dip</item>
    </style>
    <style name="ThemeDetailsPreview">
        <item name="android:layout_gravity">center</item>
        <item name="android:id">@id/theme_details_preview</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:elevation">2.0dip</item>
        <item name="android:outlineProvider">bounds</item>
    </style>
    <style name="ThemeSelectorCandidate">
        <item name="android:layout_width">@dimen/theme_selector_candidate_width</item>
        <item name="android:layout_height">@dimen/theme_selector_candidate_height</item>
        <item name="android:foreground">@drawable/bg_theme_selector_candidate_selector</item>
        <item name="android:elevation">5.0dip</item>
        <item name="android:outlineProvider">bounds</item>
    </style>
    <style name="ThemeSelectorImage">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:elevation">6.0dip</item>
        <item name="android:outlineProvider">paddedBounds</item>
    </style>
    <style name="ThemeSelectorPreviewHolder">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/theme_selector_preview_background_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">0.0</item>
        <item name="android:elevation">4.0dip</item>
    </style>
    <style name="ThemeSettingsTheme" parent="@android:style/Theme.DeviceDefault.Settings">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="TouchAware">
        <item name="android:background">?android:selectableItemBackground</item>
    </style>
    <style name="TouchAware.Borderless" parent="@style/TouchAware">
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>
</resources>
