<?xml version="1.0" encoding="utf-8"?>
<framework>
    <softkeys>
        <softkey id="@id/softkey_turn_on_single_character_candidate" layout="@layout/softkey_candidates_view_function_key_small_label_icon_bottom" multi_touch="false" content_description="@string/turn_on_single_character_candidate_key_content_desc">
            <action type="PRESS" keycode="KEYBOARD_STATE_ON" data="SINGLE_CHARACTER_CANDIDATE" />
            <if language="zh-TW|zh-XD|zh-XC|zh-HK|zh-XG|zh-XE">
                <label location="@id/label" value="@string/single_character_candidate_label_traditional" />
            </if>
            <else>
                <label location="@id/label" value="@string/single_character_candidate_label" />
            </else>
            <icon location="@id/icon_bottom" value="@attr/IconBarUnlock" />
        </softkey>
        <softkey id="@id/softkey_turn_off_single_character_candidate" layout="@layout/softkey_candidates_view_function_key_small_label_icon_bottom_active" multi_touch="false" content_description="@string/turn_off_single_character_candidate_key_content_desc">
            <action type="PRESS" keycode="KEYBOARD_STATE_OFF" data="SINGLE_CHARACTER_CANDIDATE" />
            <if language="zh-TW|zh-XD|zh-XC|zh-HK|zh-XG|zh-XE">
                <label location="@id/label" value="@string/single_character_candidate_label_traditional" />
            </if>
            <else>
                <label location="@id/label" value="@string/single_character_candidate_label" />
            </else>
            <icon location="@id/icon_bottom" value="@attr/IconBarGreen" />
        </softkey>
    </softkeys>
</framework>