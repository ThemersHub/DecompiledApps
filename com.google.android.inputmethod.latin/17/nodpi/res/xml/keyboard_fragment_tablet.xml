<?xml version="1.0" encoding="utf-8"?>
<framework>
    <keyboard>
        <view type="body">
            <softkeys href="@xml/softkeys_function_latin_tablet" />
            <include href="@xml/keymapping_function_shift_right" />
            <include href="@xml/keymapping_function_switch_to_smiley_tablet" />
            <key_mapping>
                <if language="zh">
                    <mapping view_id="@id/key_pos_input_symbol_1" key_id="@id/softkey_fullwidth_exclamation_mark" />
                    <mapping view_id="@id/key_pos_input_symbol_2" key_id="@id/softkey_fullwidth_question_mark" />
                </if>
                <else>
                    <mapping view_id="@id/key_pos_input_symbol_1" key_id="@id/softkey_exclamation_mark" />
                    <mapping view_id="@id/key_pos_input_symbol_2" key_id="@id/softkey_question_mark" />
                </else>
                <mapping view_id="@id/key_pos_switch_to_symbol" key_id="@id/softkey_switch_to_non_prime_keyboard" />
                <mapping view_id="@id/key_pos_switch_to_symbol_right" key_id="@id/softkey_switch_to_non_prime_keyboard" />
            </key_mapping>
        </view>
    </keyboard>
</framework>